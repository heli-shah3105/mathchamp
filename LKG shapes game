<body>

    <header>
        <h1>Shape Safari!</h1>
        <div class="miko">üêµ</div>
    </header>

    <main>
        <!-- Level Selection Menu -->
        <section id="level-menu">
            <h2>Choose Your Level!</h2>
            <button class="level-btn" onclick="startGame('easy')">Easy</button>
            <button class="level-btn" onclick="startGame('medium')">Medium</button>
        </section>

        <!-- Easy Level Screen -->
        <section id="game-screen-easy" class="game-screen">
            <h2>Match the Shape to its Name!</h2>
            <div id="game-board-easy"></div>
            <button class="back-btn" onclick="showMenu()">Back to Menu</button>
        </section>

        <!-- Medium Level Screen -->
        <section id="game-screen-medium" class="game-screen">
            <h2>Find the Matching Shapes!</h2>
            <div id="game-board-medium"></div>
            <button class="back-btn" onclick="showMenu()">Back to Menu</button>
        </section>
    </main>

    <div id="victory-screen">
        <h2>You're a Super Shape Finder!</h2>
        <div class="dancing-shapes">üéâüåüüéà</div>
        <button class="play-again-btn" onclick="showMenu()">Play Again!</button>
    </div>

    <div class="confetti-container" id="confetti-container"></div>

    <script>
        // --- Game Configuration ---
        const gameData = {
            circle: { emoji: 'üü°', word: 'Circle' },
            square: { emoji: 'üü¶', word: 'Square' },
            triangle: { emoji: 'üî∫', word: 'Triangle' },
            star: { emoji: '‚≠ê', word: 'Star' },
            heart: { emoji: '‚ù§Ô∏è', word: 'Heart' },
            diamond: { emoji: 'üíé', word: 'Diamond' },
            hexagon: { emoji: '‚¨°', word: 'Hexagon' }
        };

        const levelConfig = {
            easy: { pairs: 4 },
            medium: { pairs: 6 }
        };

        // --- Game State ---
        let currentLevel = '';
        let flippedCards = [];
        let matchedPairs = 0;
        let isProcessing = false;

        // --- DOM Elements ---
        const levelMenu = document.getElementById('level-menu');
        const gameScreens = {
            easy: document.getElementById('game-screen-easy'),
            medium: document.getElementById('game-screen-medium')
        };
        const gameBoards = {
            easy: document.getElementById('game-board-easy'),
            medium: document.getElementById('game-board-medium')
        };
        const victoryScreen = document.getElementById('victory-screen');
        const confettiContainer = document.getElementById('confetti-container');

        // --- Audio Helper (using Web Audio API for simple beeps) ---
        const audioContext = new (window.AudioContext || window.webkitAudioContext());

        function playSound(type) {
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            const currentTime = audioContext.currentTime;

            switch(type) {
                case 'match':
                    for(let i = 0; i < 3; i++) {
                        const osc = audioContext.createOscillator();
                        const gain = audioContext.createGain();
                        osc.connect(gain);
                        gain.connect(audioContext.destination);
                        osc.frequency.setValueAtTime(400 + (i * 200), currentTime + (i * 0.1));
                        gain.gain.setValueAtTime(0.2, currentTime + (i * 0.1));
                        gain.gain.exponentialRampToValueAtTime(0.01, currentTime + (i * 0.1) + 0.2);
                        osc.start(currentTime + (i * 0.1));
                        osc.stop(currentTime + (i * 0.1) + 0.2);
                    }
                    break;
                case 'nomatch':
                    oscillator.frequency.setValueAtTime(300, currentTime);
                    oscillator.frequency.exponentialRampToValueAtTime(100, currentTime + 0.2);
                    gainNode.gain.setValueAtTime(0.2, currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, currentTime + 0.2);
                    oscillator.start(currentTime);
                    oscillator.stop(currentTime + 0.2);
                    break;
            }
        }

        // --- Navigation ---
        function showMenu() {
            levelMenu.style.display = 'flex';
            Object.values(gameScreens).forEach(screen => screen.style.display = 'none');
            victoryScreen.style.display = 'none';
            document.body.classList.remove('victory-active'); // Re-enable scrolling
        }

        function startGame(level) {
            currentLevel = level;
            levelMenu.style.display = 'none';
            victoryScreen.style.display = 'none';
            document.body.classList.remove('victory-active'); // Re-enable scrolling
            Object.values(gameScreens).forEach(screen => screen.style.display = 'none');
            gameScreens[level].style.display = 'flex';
            
            resetState();
            initLevel(level);
        }

        function resetState() {
            flippedCards = [];
            matchedPairs = 0;
            isProcessing = false;
        }

        // --- Level Initialization ---
        function initLevel(level) {
            Object.values(gameBoards).forEach(board => board.innerHTML = '');
            
            switch(level) {
                case 'easy':
                    initEasyLevel();
                    break;
                case 'medium':
                    initMediumLevel();
                    break;
            }
        }

        // --- EASY LEVEL LOGIC ---
        function initEasyLevel() {
            const shapeKeys = Object.keys(gameData);
            const selectedShapes = shuffle(shapeKeys).slice(0, levelConfig.easy.pairs);
            
            selectedShapes.forEach(shapeKey => {
                const shapeCard = createEasyItem(shapeKey, 'shape');
                const wordCard = createEasyItem(shapeKey, 'word');
                gameBoards.easy.appendChild(shapeCard);
                gameBoards.easy.appendChild(wordCard);
            });
            // Shuffle the items in the grid
            const allItems = [...gameBoards.easy.children];
            shuffle(allItems);
            gameBoards.easy.innerHTML = '';
            allItems.forEach(item => gameBoards.easy.appendChild(item));
        }

        function createEasyItem(shapeKey, type) {
            const item = document.createElement('div');
            item.classList.add('item', type);
            item.dataset.shapeKey = shapeKey;
            item.textContent = type === 'shape' ? gameData[shapeKey].emoji : gameData[shapeKey].word;
            item.addEventListener('click', handleEasyClick);
            return item;
        }

        let firstEasySelection = null;
        function handleEasyClick(event) {
            if (isProcessing) return;
            const clickedItem = event.currentTarget;
            if (clickedItem.classList.contains('matched')) return;

            if (!firstEasySelection) {
                firstEasySelection = clickedItem;
                clickedItem.style.backgroundColor = '#FDE047'; // Highlight
            } else if (firstEasySelection === clickedItem) {
                firstEasySelection.style.backgroundColor = '';
                firstEasySelection = null;
            } else {
                // Check for match
                isProcessing = true;
                if (firstEasySelection.dataset.shapeKey === clickedItem.dataset.shapeKey) {
                    // Match!
                    setTimeout(() => {
                        firstEasySelection.classList.add('matched');
                        clickedItem.classList.add('matched');
                        playSound('match');
                        createConfetti();
                        matchedPairs++;
                        isProcessing = false;
                        firstEasySelection = null;
                        if (matchedPairs === levelConfig.easy.pairs) {
                            setTimeout(showVictoryScreen, 500);
                        }
                    }, 300);
                } else {
                    // No match
                    setTimeout(() => {
                        firstEasySelection.style.backgroundColor = '';
                        playSound('nomatch');
                        isProcessing = false;
                        firstEasySelection = null;
                    }, 500);
                }
            }
        }

        // --- MEDIUM LEVEL LOGIC ---
        function initMediumLevel() {
            const shapeKeys = Object.keys(gameData);
            const selectedShapes = shuffle(shapeKeys).slice(0, levelConfig.medium.pairs);
            const cardPairs = [...selectedShapes, ...selectedShapes];
            shuffle(cardPairs);

            cardPairs.forEach((shapeKey, index) => {
                const card = createMediumCard(shapeKey, index);
                gameBoards.medium.appendChild(card);
            });
        }

        function createMediumCard(shapeKey, id) {
            const card = document.createElement('div');
            card.classList.add('card');
            card.dataset.shapeKey = shapeKey;
            card.dataset.id = id;

            const cardFront = document.createElement('div');
            cardFront.classList.add('card-face', 'card-front');
            cardFront.textContent = 'üçÉ';

            const cardBack = document.createElement('div');
            cardBack.classList.add('card-face', 'card-back');
            cardBack.textContent = gameData[shapeKey].emoji;

            card.appendChild(cardFront);
            card.appendChild(cardBack);
            card.addEventListener('click', handleMediumClick);
            return card;
        }

        function handleMediumClick(event) {
            if (isProcessing) return;
            const clickedCard = event.currentTarget;
            if (clickedCard.classList.contains('flipped') || clickedCard.classList.contains('matched')) return;

            clickedCard.classList.add('flipped');
            flippedCards.push(clickedCard);

            if (flippedCards.length === 2) {
                isProcessing = true;
                checkMediumMatch();
            }
        }

        function checkMediumMatch() {
            const [card1, card2] = flippedCards;
            const shape1 = card1.dataset.shapeKey;
            const shape2 = card2.dataset.shapeKey;

            if (shape1 === shape2) {
                setTimeout(() => {
                    card1.classList.add('matched');
                    card2.classList.add('matched');
                    playSound('match');
                    createConfetti();
                    matchedPairs++;
                    flippedCards = [];
                    isProcessing = false;
                    if (matchedPairs === levelConfig.medium.pairs) {
                        setTimeout(showVictoryScreen, 500);
                    }
                }, 600);
            } else {
                setTimeout(() => {
                    card1.classList.remove('flipped');
                    card2.classList.remove('flipped');
                    playSound('nomatch');
                    flippedCards = [];
                    isProcessing = false;
                }, 1200);
            }
        }

        // --- Shared Game Functions ---
        function shuffle(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function createConfetti() {
            confettiContainer.innerHTML = '';
            const colors = ['#FBBF24', '#F87171', '#A78BFA', '#60A5FA', '#34D399', '#FDE047'];
            for (let i = 0; i < 50; i++) {
                const confettiPiece = document.createElement('div');
                confettiPiece.classList.add('confetti');
                confettiPiece.style.left = Math.random() * 100 + '%';
                confettiPiece.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confettiPiece.style.animationDelay = Math.random() * 0.5 + 's';
                confettiPiece.style.animationDuration = (Math.random() * 1 + 2) + 's';
                confettiContainer.appendChild(confettiPiece);
            }
            setTimeout(() => { confettiContainer.innerHTML = ''; }, 3000);
        }

        function showVictoryScreen() {
            victoryScreen.style.display = 'flex';
            document.body.classList.add('victory-active'); // Disable scrolling
        }

        // --- Initial Load ---
        showMenu();

    </script>
</body>
</html>
