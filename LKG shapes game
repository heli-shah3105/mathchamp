            transform-origin: top center;
            display: inline-block;
        }

        /* --- Main Game Area --- */
        main {
            width: 90%;
            max-width: 800px;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            flex-grow: 1; /* Allows main area to grow and push footer down */
        }

        /* --- Level Selection Menu --- */
        #level-menu {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        .level-btn {
            padding: 20px 40px;
            font-size: 1.8rem;
            font-family: 'Fredoka', sans-serif;
            font-weight: 600;
            background: var(--button-bg);
            color: var(--text-color);
            border: 3px solid var(--text-color);
            border-radius: 50px;
            cursor: pointer;
            box-shadow: 0 6px 0 var(--text-color);
            transition: transform 0.1s, box-shadow 0.1s;
            width: 250px;
        }

        .level-btn:hover {
            transform: translateY(2px);
            box-shadow: 0 4px 0 var(--text-color);
        }

        .level-btn:active {
            transform: translateY(6px);
            box-shadow: none;
        }

        /* --- Game Boards --- */
        .game-screen {
            display: none; /* Hidden by default */
            width: 100%;
            flex-direction: column;
            align-items: center;
        }

        #game-board-easy {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            width: 100%;
            max-width: 500px;
        }

        #game-board-medium {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
            width: 100%;
            perspective: 1000px;
        }

        /* --- Card & Item Styling --- */
        .card, .item {
            aspect-ratio: 1 / 1;
            cursor: pointer;
            position: relative;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 6px 0 var(--card-shadow), 0 8px 15px rgba(0,0,0,0.2);
            border: 3px solid var(--text-color);
            background: var(--card-bg);
            font-size: 3rem;
            transition: transform 0.2s, background-color 0.3s;
        }

        .item.word {
            font-size: 1.5rem;
            font-weight: 600;
            padding: 10px;
        }

        .card.flipped {
            transform: rotateY(180deg);
        }

        .card.matched, .item.matched {
            animation: matchPulse 0.6s ease-out;
            pointer-events: none;
            background-color: #86EFAC; /* Light green for matched */
        }
        
        .card-face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4rem;
        }

        .card-front {
            background: var(--card-bg);
        }

        .card-back {
            background: #86EFAC;
            transform: rotateY(180deg);
        }

        /* --- Shared UI Elements --- */
        .back-btn {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 1.2rem;
            font-family: 'Fredoka', sans-serif;
            font-weight: 600;
            background: #EF4444;
            color: white;
            border: 3px solid var(--text-color);
            border-radius: 50px;
            cursor: pointer;
            box-shadow: 0 4px 0 var(--text-color);
            transition: transform 0.1s, box-shadow 0.1s;
        }
        .back-btn:hover {
            transform: translateY(2px);
            box-shadow: 0 2px 0 var(--text-color);
        }

        /* --- Confetti Effect --- */
        .confetti-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
            z-index: 100;
        }

        .confetti {
            position: absolute;
            width: 10px;
            height: 10px;
            background: var(--button-bg);
            animation: confetti-fall 3s linear forwards;
        }

        /* --- Victory Screen --- */
        #victory-screen {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 200;
            justify-content: center;
