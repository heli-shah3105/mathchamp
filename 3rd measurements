        function startLevel(level) {
            currentLevel = level;
            currentQuestion = 0;
            score = 0;
            answered = false;

            document.getElementById('menuScreen').style.display = 'none';
            document.querySelectorAll('.game-area').forEach(area => {
                area.classList.remove('active');
            });

            document.getElementById(level + 'Level').classList.add('active');
            loadQuestion();
            
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function loadQuestion() {
            answered = false;
            let questions, prefix;
            
            switch(currentLevel) {
                case 'weight':
                    questions = weightQuestions;
                    prefix = 'weight';
                    break;
                case 'distance':
                    questions = distanceQuestions;
                    prefix = 'distance';
                    break;
                case 'time':
                    questions = timeQuestions;
                    prefix = 'time';
                    break;
            }

            if (currentQuestion >= questions.length) {
                endLevel();
                return;
            }

            const q = questions[currentQuestion];
            document.getElementById(prefix + 'Visual').textContent = q.visual;
            document.getElementById(prefix + 'Question').textContent = q.question;
            document.getElementById(prefix + 'Score').textContent = score;
            document.getElementById(prefix + 'QuestionNum').textContent = `${currentQuestion + 1}/8`;
            
            const progress = ((currentQuestion + 1) / questions.length) * 100;
            const progressBar = document.getElementById(prefix + 'Progress');
            progressBar.style.width = progress + '%';
            progressBar.textContent = Math.round(progress) + '%';

            const optionsContainer = document.getElementById(prefix + 'Options');
            optionsContainer.innerHTML = '';

            q.options.forEach((option, index) => {
                const btn = document.createElement('button');
                btn.className = 'option-btn';
                btn.textContent = option;
                btn.onclick = () => checkAnswer(index, q.correct);
                optionsContainer.appendChild(btn);
            });
        }

        function checkAnswer(selected, correct) {
            if (answered) return;
            answered = true;

            const prefix = currentLevel;
            const buttons = document.querySelectorAll(`#${prefix}Options .option-btn`);
            
            if (selected === correct) {
                buttons[selected].classList.add('correct');
                score++;
                showFeedback('Correct! üéâ', true);
                createConfetti();
            } else {
                buttons[selected].classList.add('incorrect');
                buttons[correct].classList.add('correct');
                showFeedback('Try Again! üí™', false);
            }

            setTimeout(() => {
                currentQuestion++;
                loadQuestion();
            }, 2000);
        }

        function showFeedback(message, isSuccess) {
            const feedback = document.getElementById('feedback');
            feedback.textContent = message;
            feedback.className = 'feedback ' + (isSuccess ? 'success' : 'error');
            feedback.style.display = 'block';

            setTimeout(() => {
                feedback.style.display = 'none';
            }, 1500);
        }

        function createConfetti() {
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.background = `hsl(${Math.random() * 360}, 100%, 50%)`;
                    confetti.style.animationDelay = Math.random() * 0.5 + 's';
                    document.body.appendChild(confetti);

                    setTimeout(() => {
                        confetti.remove();
                    }, 3000);
                }, i * 50);
            }
        }

        function endLevel() {
            const prefix = currentLevel;
            const percentage = (score / 8) * 100;
            let message = '';
            let stars = '';
            
            if (percentage >= 87.5) {
                message = 'Outstanding! You\'re a Conversion Master! üèÜ';
                stars = '‚≠ê‚≠ê‚≠ê';
                createConfetti();
            } else if (percentage >= 75) {
                message = 'Excellent work! Almost perfect! üåü';
                stars = '‚≠ê‚≠ê';
            } else if (percentage >= 62.5) {
                message = 'Great job! Keep practicing! üí´';
                stars = '‚≠ê';
            } else {
                message = 'Good try! Review the formulas and try again! üí™';
                stars = 'üìö';
            }

            const gameArea = document.getElementById(prefix + 'Level');
            gameArea.innerHTML = `
                <div class="conversion-display">
                    <div class="conversion-formula">üéä Level Complete! üéä</div>
                </div>
                <div class="question-box">
                    <div class="visual-aid">üèÜ</div>
                    <h2 style="font-size: 2em; color: #764ba2; margin: 20px 0;">Conversion Champion!</h2>
                    <div style="font-size: 3em; margin: 20px 0;">${stars}</div>
                    <p style="font-size: 1.5em; margin: 20px 0;">Your Score: ${score}/8</p>
                    <p style="font-size: 1.2em; color: #666;">${message}</p>
                    <div style="margin-top: 30px;">
                        <button class="level-btn ${prefix}-btn" onclick="startLevel('${prefix}')">Play Again</button>
                        <button class="back-btn" onclick="backToMenu()" style="margin-left: 10px;">Back to Menu</button>
                    </div>
                </div>
                
                <div style="height: 300px; background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%); border-radius: 20px; margin-top: 20px; padding: 20px;">
                    <h3 style="color: #764ba2; text-align: center; margin-bottom: 15px;">üéØ Your Results üéØ</h3>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                        <div style="background: white; padding: 15px; border-radius: 10px; text-align: center;">
                            <div style="font-size: 2em;">${score}</div>
                            <div style="color: #666;">Correct Answers</div>
                        </div>
                        <div style="background: white; padding: 15px; border-radius: 10px; text-align: center;">
                            <div style="font-size: 2em;">${8 - score}</div>
                            <div style="color: #666;">Wrong Answers</div>
                        </div>
                    </div>
                    <div style="background: white; padding: 15px; border-radius: 10px; text-align: center; margin-top: 15px;">
                        <div style="font-size: 2em; color: #43e97b;">${Math.round(percentage)}%</div>
                        <div style="color: #666;">Success Rate</div>
                    </div>
                    <div style="background: white; padding: 15px; border-radius: 10px; text-align: center; margin-top: 15px;">
                        <div style="font-size: 1.5em; color: #764ba2;">${stars}</div>
                        <div style="color: #666;">Performance Rating</div>
                    </div>
                </div>
            `;
        }

        function backToMenu() {
            document.querySelectorAll('.game-area').forEach(area => {
                area.classList.remove('active');
            });
            document.getElementById('menuScreen').style.display = 'block';
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        document.documentElement.style.scrollBehavior = 'smooth';
    </script>
