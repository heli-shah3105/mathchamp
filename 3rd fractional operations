        // Scroll functionality
        window.addEventListener('scroll', () => {
            const scrollTop = document.getElementById('scrollTop');
            if (window.pageYOffset > 100) {
                scrollTop.classList.add('visible');
            } else {
                scrollTop.classList.remove('visible');
            }
        });

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        function startGame() {
            document.getElementById('startScreen').classList.add('hidden');
            document.getElementById('gameScreen').classList.remove('hidden');
            currentLevel = 1;
            score = 0;
            stars = 0;
            questionsAnswered = 0;
            hintShown = false;
            updateScore();
            loadLevel(1);
            scrollToTop();
        }

        function loadLevel(level) {
            currentLevel = level;
            document.getElementById('currentLevel').textContent = level;
            
            // Update level badges
            document.querySelectorAll('.level-badge').forEach((badge, index) => {
                badge.classList.remove('active', 'completed', 'locked');
                if (index + 1 < level) {
                    badge.classList.add('completed');
                } else if (index + 1 === level) {
                    badge.classList.add('active');
                } else {
                    badge.classList.add('locked');
                }
            });

            questionsAnswered = 0;
            totalQuestions = levelData[level].totalQuestions;
            updateProgress();
            generateQuestion();
        }

        function generateQuestion() {
            const level = levelData[currentLevel];
            const randomIndex = Math.floor(Math.random() * level.questions.length);
            currentQuestion = level.questions[randomIndex];
            hintShown = false;
            
            const gameArea = document.getElementById('gameArea');
            
            // Parse the operation to display it nicely
            const operationParts = currentQuestion.operation.split(' ');
            const symbol = operationParts[1];
            let symbolDisplay = '';
            
            switch(symbol) {
                case '+': symbolDisplay = '+'; break;
                case '-': symbolDisplay = '‚àí'; break;
                case '√ó': symbolDisplay = '√ó'; break;
                case '√∑': symbolDisplay = '√∑'; break;
            }
            
            gameArea.innerHTML = `
                <div class="instruction">${getLevelInstruction(currentLevel)}</div>
                <div class="operation-display">
                    <div class="fraction-display">
                        <span>${operationParts[0].split('/')[0]}</span>
                        <div class="fraction-line"></div>
                        <span>${operationParts[0].split('/')[1]}</span>
                    </div>
                    <div class="operation-symbol">${symbolDisplay}</div>
                    <div class="fraction-display">
                        <span>${operationParts[2].split('/')[0]}</span>
                        <div class="fraction-line"></div>
                        <span>${operationParts[2].split('/')[1]}</span>
                    </div>
                    <div class="operation-symbol">=</div>
                    <div class="fraction-display">
                        <span>?</span>
                    </div>
                </div>
                <div id="hintContainer"></div>
                <div class="options-container">
                    ${currentQuestion.options.map(option => `
                        <div class="option-card" onclick="checkAnswer('${option}')">
                            <div class="fraction-display" style="font-size: 1.5em;">
                                ${option.includes('/') ? `
                                    <span>${option.split('/')[0]}</span>
                                    <div class="fraction-line"></div>
                                    <span>${option.split('/')[1]}</span>
                                ` : `<span>${option}</span>`}
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        function getLevelInstruction(level) {
            switch(level) {
                case 1: return "‚ûï Add the fractions together!";
                case 2: return "‚ûñ Subtract the fractions!";
                case 3: return "‚úñÔ∏è Multiply the fractions!";
                case 4: return "‚ûó Divide the fractions!";
                default: return "Solve the fraction operation!";
            }
        }

        function checkAnswer(answer) {
            const cards = document.querySelectorAll('.option-card');
            cards.forEach(card => {
                card.style.pointerEvents = 'none';
            });
            
            const clickedCard = event.currentTarget;
            
            if (answer === currentQuestion.correct) {
                clickedCard.classList.add('correct');
                score += 10;
                stars += 1;
                createConfetti();
                playSuccessSound();
                
                questionsAnswered++;
                updateScore();
                updateProgress();
                
                setTimeout(() => {
                    if (questionsAnswered >= totalQuestions) {
                        if (currentLevel < 4) {
                            loadLevel(currentLevel + 1);
                        } else {
                            endGame();
                        }
                    } else {
                        generateQuestion();
                    }
                }, 1500);
            } else {
                clickedCard.classList.add('incorrect');
                
                // Show hint if not already shown
                if (!hintShown) {
                    showHint();
                    hintShown = true;
                    
                    // Re-enable clicking after showing hint
                    setTimeout(() => {
                        cards.forEach(card => {
                            card.style.pointerEvents = 'auto';
                        });
                        clickedCard.classList.remove('incorrect');
                    }, 2500);
                } else {
                    // Show correct answer after hint has been shown
                    setTimeout(() => {
                        cards.forEach(card => {
                            const cardContent = card.querySelector('.fraction-display');
                            let cardText;
                            
                            if (cardContent.children.length > 1) {
                                // It's a fraction
                                cardText = `${cardContent.children[0].textContent}/${cardContent.children[2].textContent}`;
                            } else {
                                // It's a whole number
                                cardText = cardContent.children[0].textContent;
                            }
                            
                            if (cardText === currentQuestion.correct) {
                                card.classList.add('correct');
                            }
                        });
                        
                        questionsAnswered++;
                        updateScore();
                        updateProgress();
                        
                        setTimeout(() => {
                            if (questionsAnswered >= totalQuestions) {
                                if (currentLevel < 4) {
                                    loadLevel(currentLevel + 1);
                                } else {
                                    endGame();
                                }
                            } else {
                                generateQuestion();
                            }
                        }, 1500);
                    }, 1000);
                }
            }
        }

        function showHint() {
            const hintContainer = document.getElementById('hintContainer');
            hintContainer.innerHTML = `
                <div class="hint-box">
                    üí° Hint: ${currentQuestion.hint}
                </div>
            `;
        }

        function updateScore() {
            document.getElementById('score').textContent = score;
            document.getElementById('stars').textContent = stars;
        }

        function updateProgress() {
            const percentage = Math.round((questionsAnswered / totalQuestions) * 100);
            const progressBar = document.getElementById('progressBar');
            progressBar.style.width = percentage + '%';
            progressBar.textContent = percentage + '%';
        }

        function createConfetti() {
            const colors = ['#f0f', '#0ff', '#ff0', '#0f0', '#f00', '#00f'];
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animationDelay = Math.random() * 0.5 + 's';
                    document.body.appendChild(confetti);
                    
                    setTimeout(() => confetti.remove(), 3000);
                }, i * 50);
            }
        }

        function playSuccessSound() {
            // Create a simple success sound using Web Audio API
            if (window.AudioContext || window.webkitAudioContext) {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.value = 523.25; // C5 note
                oscillator.type = 'sine';
                
                gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.5);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 0.5);
            }
        }

        function endGame() {
            document.getElementById('gameScreen').classList.add('hidden');
            document.getElementById('endScreen').classList.remove('hidden');
            document.getElementById('finalScore').textContent = score;
            
            // Calculate star rating
            let starRating = '‚≠ê';
            if (score >= 200) starRating = '‚≠ê‚≠ê‚≠ê‚≠ê';
            else if (score >= 150) starRating = '‚≠ê‚≠ê‚≠ê';
            else if (score >= 100) starRating = '‚≠ê‚≠ê';
            document.getElementById('finalStars').textContent = starRating;
            
            // Create celebration confetti
            for (let i = 0; i < 50; i++) {
                setTimeout(() => createConfetti(), i * 100);
            }
            scrollToTop();
        }

        function resetGame() {
            document.getElementById('endScreen').classList.add('hidden');
            document.getElementById('startScreen').classList.remove('hidden');
            scrollToTop();
        }

        // Add some initial animations
        window.addEventListener('load', () => {
            document.querySelector('.game-container').style.animation = 'slideIn 0.5s ease-out';
        });
    </script>
</body>
</html>
