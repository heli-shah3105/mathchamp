            animation: wobble 3s infinite ease-in-out;
        }

        @keyframes bobble {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        @keyframes wobble {
            0%, 100% { transform: rotate(-3deg); }
            50% { transform: rotate(3deg); }
        }

        /* Typing Level Styles */
        #typing-container {
            display: none; /* Hidden by default */
