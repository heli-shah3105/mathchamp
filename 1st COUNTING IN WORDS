<body>
    <div class="bg-shape"></div>
    <div class="bg-shape"></div>
    <div class="bg-shape"></div>

    <div id="game-container">
        <header>
            <h1>Number Pop! A Wordy Adventure</h1>
        </header>
        <div id="info-bar">
            <span>Level: <span id="level">1</span></span>
            <span>Question: <span id="question">1</span> of 5</span>
            <span>Score: <span id="score">0</span></span>
        </div>
        <main>
            <div id="items-container"></div>
            <div id="bubbles-container"></div>
            
            <!-- Typing Level UI -->
            <div id="typing-container">
                <div id="answer-display">Type the number word...</div>
                <div id="letter-pad">
                    <!-- Letters will be generated by JavaScript -->
                </div>
                <div id="action-buttons">
                    <button class="action-button clear" onclick="clearAnswer()">Clear</button>
                    <button class="action-button submit" onclick="submitTypedAnswer()">Submit</button>
                </div>
                <div id="hint-container">
                    <!-- Hints will appear here -->
                </div>
            </div>

            <button id="next-question-button" class="hidden" onclick="proceedToNextQuestion()">Next Question! üëâ</button>
        </main>

        <div id="start-screen">
            <h2>üåü Ready to Pop? üåü</h2>
            <p>Count the items and pop the correct word bubble!</p>
            <button class="game-button" onclick="startGame()">Let's Go!</button>
        </div>

        <div id="level-complete-screen" class="hidden">
            <h2>üéâ Level Complete! üéâ</h2>
            <p>You did amazing!</p>
            <button class="game-button" onclick="nextLevel()">Next Level</button>
        </div>

        <div id="game-over-screen" class="hidden">
            <h2>üèÜ You Win! üèÜ</h2>
            <p>Congratulations, you're a Number Pop Superstar!</p>
            <p>Final Score: <span id="final-score">0</span></p>
            <button class="game-button" onclick="resetGame()">Play Again</button>
        </div>
    </div>

    <script>
        const numberWords = [
            "zero", "one", "two", "three", "four", "five", "six", "seven", "eight", "nine", "ten",
            "eleven", "twelve", "thirteen", "fourteen", "fifteen", "sixteen", "seventeen", "eighteen", "nineteen", "twenty"
        ];

        const itemEmojis = ['üçé', 'üçì', 'üçå', 'üçá', 'üçâ', 'üçí', 'üçë', 'ü•ù', 'üçç', 'üçã', 'üßÅ', 'üç™', 'üç©', 'üéà', '‚≠ê', 'üåü', 'üéÄ', 'üöÄ', 'ü¶Ñ', 'üêû', 'üêù', 'ü¶ã'];

        // Game State
        let currentLevel = 1;
        let currentQuestion = 1;
        let score = 0;
        let correctAnswerCount = 0;
        let correctAnswerWord = '';
        let correctAnswerNumber = '';
        let isProcessingAnswer = false;
        let currentTypedAnswer = '';
        let wrongAttempts = 0;

        // Level Configuration
        const levelConfig = {
            1: { type: 'bubble', maxNumber: 5, questionsPerLevel: 5 },
            2: { type: 'bubble', maxNumber: 10, questionsPerLevel: 5 },
            3: { type: 'bubble', maxNumber: 15, questionsPerLevel: 5 },
            4: { type: 'type', maxNumber: 20, questionsPerLevel: 5 } // New typing level
        };

        // DOM Elements
        const itemsContainer = document.getElementById('items-container');
        const bubblesContainer = document.getElementById('bubbles-container');
        const typingContainer = document.getElementById('typing-container');
        const answerDisplay = document.getElementById('answer-display');
        const letterPad = document.getElementById('letter-pad');
        const hintContainer = document.getElementById('hint-container');
        const levelDisplay = document.getElementById('level');
        const questionDisplay = document.getElementById('question');
        const scoreDisplay = document.getElementById('score');
        const nextQuestionButton = document.getElementById('next-question-button');
        const startScreen = document.getElementById('start-screen');
        const levelCompleteScreen = document.getElementById('level-complete-screen');
        const gameOverScreen = document.getElementById('game-over-screen');
        const finalScoreDisplay = document.getElementById('final-score');

        function getRandomInt(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        function createParticles(x, y) {
            for (let i = 0; i < 20; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = `${x}px`;
                particle.style.top = `${y}px`;
                particle.style.background = `hsl(${getRandomInt(0, 360)}, 100%, 50%)`;
                particle.style.setProperty('--x', `${getRandomInt(-100, 100)}px`);
                particle.style.setProperty('--y', `${getRandomInt(-100, 100)}px`);
                document.body.appendChild(particle);
                setTimeout(() => particle.remove(), 1000);
            }
        }

        function showFeedback(isSuccess, element) {
            const feedback = document.createElement('div');
            feedback.className = `feedback ${isSuccess ? 'success' : 'error'}`;
            feedback.textContent = isSuccess ? '‚úì' : '‚úó';
            
            const rect = element.getBoundingClientRect();
            const containerRect = document.getElementById('game-container').getBoundingClientRect();
            feedback.style.left = `${rect.left - containerRect.left + rect.width / 2}px`;
            feedback.style.top = `${rect.top - containerRect.top + rect.height / 2}px`;
            
            document.getElementById('game-container').appendChild(feedback);
            setTimeout(() => feedback.remove(), 1000);
        }

        function generateLetterPad() {
            letterPad.innerHTML = '';
            const letters = 'abcdefghijklmnopqrstuvwxyz';
            
            for (let letter of letters) {
                const button = document.createElement('button');
                button.className = 'letter-button';
                button.textContent = letter;
                button.onclick = () => appendLetter(letter);
                letterPad.appendChild(button);
            }
        }

        function generateQuestion() {
            nextQuestionButton.classList.add('hidden');
            isProcessingAnswer = false;
            currentTypedAnswer = '';
            wrongAttempts = 0;
            answerDisplay.textContent = 'Type the number word...';
            clearHint();

            itemsContainer.innerHTML = '';
            bubblesContainer.innerHTML = '';
            
            const config = levelConfig[currentLevel];
            const maxNumber = config.maxNumber;
            correctAnswerCount = getRandomInt(1, maxNumber);
            correctAnswerWord = numberWords[correctAnswerCount];
            correctAnswerNumber = String(correctAnswerCount);

            // Show/hide correct UI elements
            if (config.type === 'bubble') {
                bubblesContainer.style.display = 'flex';
                typingContainer.style.display = 'none';
            } else {
                bubblesContainer.style.display = 'none';
                typingContainer.style.display = 'flex';
                
                // Generate letter pad for typing level
                generateLetterPad();
            }

            // Generate items to count
            const chosenEmoji = itemEmojis[getRandomInt(0, itemEmojis.length - 1)];
            for (let i = 0; i < correctAnswerCount; i++) {
                const item = document.createElement('span');
                item.className = 'item';
                item.textContent = chosenEmoji;
                item.style.setProperty('--i', i);
                item.addEventListener('click', () => {
                    item.classList.add('tapped');
                    setTimeout(() => item.classList.remove('tapped'), 400);
                });
                itemsContainer.appendChild(item);
            }

            // Generate bubbles for bubble levels
            if (config.type === 'bubble') {
                const bubbleWords = [correctAnswerWord];
                while (bubbleWords.length < 3) {
                    const randomWord = numberWords[getRandomInt(1, maxNumber)];
                    if (!bubbleWords.includes(randomWord)) {
                        bubbleWords.push(randomWord);
                    }
                }
                bubbleWords.sort(() => Math.random() - 0.5);

                bubbleWords.forEach((word, index) => {
                    const bubble = document.createElement('div');
                    bubble.className = 'bubble';
                    bubble.style.setProperty('--i', index);
                    bubble.innerHTML = `<span class="bubble-word">${word}</span>`;
                    bubble.addEventListener('click', (e) => checkBubbleAnswer(word, e.currentTarget));
                    bubblesContainer.appendChild(bubble);
                });
            }
        }

        function checkBubbleAnswer(selectedWord, element) {
            if (isProcessingAnswer) return;
            isProcessingAnswer = true;

            const isCorrect = selectedWord === correctAnswerWord;
            const rect = element.getBoundingClientRect();
            const containerRect = document.getElementById('game-container').getBoundingClientRect();
            const x = rect.left - containerRect.left + rect.width / 2;
            const y = rect.top - containerRect.top + rect.height / 2;

            if (isCorrect) {
                score += 10;
                scoreDisplay.textContent = score;
                showFeedback(true, element);
                createParticles(x, y);
                element.style.visibility = 'hidden';
                nextQuestionButton.classList.remove('hidden');
            } else {
                showFeedback(false, element);
                element.style.animation = 'shake 0.5s';
                setTimeout(() => {
                    element.style.animation = 'bobble 3s infinite ease-in-out';
                    isProcessingAnswer = false;
                }, 500);
            }
        }
        
        // Typing Level Functions
        function appendLetter(letter) {
            if (isProcessingAnswer) return;
            currentTypedAnswer += letter;
            updateAnswerDisplay();
        }

        function clearAnswer() {
            if (isProcessingAnswer) return;
            currentTypedAnswer = '';
            updateAnswerDisplay();
        }

        function updateAnswerDisplay() {
            if (currentTypedAnswer === '') {
                answerDisplay.textContent = 'Type the number word...';
            } else {
                answerDisplay.textContent = currentTypedAnswer;
            }
        }

        function showHint(message) {
            hintContainer.innerHTML = '';
            const hint = document.createElement('div');
            hint.className = 'hint';
            hint.textContent = message;
            hintContainer.appendChild(hint);
        }

        function clearHint() {
            hintContainer.innerHTML = '';
        }

        function generateHint() {
            wrongAttempts++;
            
            // Different hints based on number of wrong attempts
            if (wrongAttempts === 1) {
                // First hint - length comparison
                if (currentTypedAnswer.length < correctAnswerWord.length) {
                    showHint(`Try a longer word. The answer has ${correctAnswerWord.length} letters.`);
                } else if (currentTypedAnswer.length > correctAnswerWord.length) {
                    showHint(`Try a shorter word. The answer has ${correctAnswerWord.length} letters.`);
                } else {
                    showHint(`Good length! Check your spelling.`);
                }
            } else if (wrongAttempts === 2) {
                // Second hint - first letter
                showHint(`The word starts with "${correctAnswerWord[0].toUpperCase()}".`);
            } else if (wrongAttempts >= 3) {
                // Third hint - reveal one more letter
                const revealedLetters = Math.min(wrongAttempts - 1, correctAnswerWord.length);
                let hintText = `The word starts with "${correctAnswerWord.substring(0, revealedLetters)}"`;
                
                if (revealedLetters < correctAnswerWord.length) {
                    hintText += ` and has ${correctAnswerWord.length} letters total.`;
                } else {
                    hintText += `. That's the whole word!`;
                }
                
                showHint(hintText);
            }
        }

        function submitTypedAnswer() {
            if (isProcessingAnswer || currentTypedAnswer === '') return;
            isProcessingAnswer = true;

            const isCorrect = currentTypedAnswer.toLowerCase() === correctAnswerWord;
            const displayElement = answerDisplay;

            if (isCorrect) {
                score += 15; // More points for typing!
                scoreDisplay.textContent = score;
                showFeedback(true, displayElement);
                const rect = displayElement.getBoundingClientRect();
                const containerRect = document.getElementById('game-container').getBoundingClientRect();
                createParticles(rect.left - containerRect.left + rect.width / 2, rect.top - containerRect.top + rect.height / 2);
                nextQuestionButton.classList.remove('hidden');
                clearHint();
            } else {
                showFeedback(false, displayElement);
                displayElement.style.animation = 'shake 0.5s';
                generateHint();
                setTimeout(() => {
                    displayElement.style.animation = 'none';
                    isProcessingAnswer = false;
                }, 500);
            }
        }

        function proceedToNextQuestion() {
            if (currentQuestion < levelConfig[currentLevel].questionsPerLevel) {
                currentQuestion++;
                questionDisplay.textContent = currentQuestion;
                generateQuestion();
            } else {
                levelCompleteScreen.classList.remove('hidden');
            }
        }

        function startGame() {
            startScreen.classList.add('hidden');
            currentLevel = 1;
            currentQuestion = 1;
            score = 0;
            levelDisplay.textContent = currentLevel;
            questionDisplay.textContent = currentQuestion;
            scoreDisplay.textContent = score;
            generateQuestion();
        }

        function nextLevel() {
            levelCompleteScreen.classList.add('hidden');
            currentLevel++;
            currentQuestion = 1;
            levelDisplay.textContent = currentLevel;
            questionDisplay.textContent = currentQuestion;
            
            if (currentLevel > Object.keys(levelConfig).length) {
                finalScoreDisplay.textContent = score;
                gameOverScreen.classList.remove('hidden');
            } else {
                generateQuestion();
            }
        }
        
        function resetGame() {
            gameOverScreen.classList.add('hidden');
            startGame();
        }

        // Initial setup
        levelDisplay.textContent = currentLevel;
        questionDisplay.textContent = currentQuestion;
        scoreDisplay.textContent = score;
    </script>
</body>
</html>
