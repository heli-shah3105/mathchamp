            cursor: pointer;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            transition: transform 0.1s, background-color 0.2s;
        }
        .letter-button:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
        }
        .letter-button:active {
            transform: translateY(0);
        }
        
        #action-buttons {
            display: flex;
            gap: 8px;
            margin-top: 8px;
        }
        
        .action-button {
            padding: 8px 16px;
            font-size: 1.1em;
            font-family: 'Fredoka', sans-serif;
            font-weight: 700;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            transition: transform 0.1s, background-color 0.2s;
        }
        
        .action-button.clear {
            background: var(--error-color);
            color: white;
        }
        
        .action-button.submit {
            background: var(--success-color);
            color: white;
        }
        
        .action-button:hover {
            transform: translateY(-2px);
        }
        
        .action-button:active {
            transform: translateY(0);
        }

        /* Hint Styles */
        #hint-container {
            margin-top: 10px;
            text-align: center;
            min-height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hint {
            background: var(--hint-color);
            color: white;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 600;
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
            animation: hintPulse 2s infinite;
        }

        @keyframes hintPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        /* Feedback Animations */
        .feedback {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 5em;
            font-weight: 700;
            z-index: 100;
            pointer-events: none;
            animation: feedbackPop 1s ease-out forwards;
        }

        .feedback.success {
            color: var(--success-color);
            text-shadow: 0 0 20px rgba(76, 175, 80, 0.7);
        }

        .feedback.error {
            color: var(--error-color);
            text-shadow: 0 0 20px rgba(244, 67, 54, 0.7);
            animation: shake 0.5s ease-out forwards;
        }

        @keyframes feedbackPop {
            0% { transform: translate(-50%, -50%) scale(0) rotate(0deg); opacity: 1; }
            50% { transform: translate(-50%, -50%) scale(1.5) rotate(180deg); }
            100% { transform: translate(-50%, -50%) scale(1) rotate(360deg); opacity: 0; }
        }

        @keyframes shake {
            0%, 100% { transform: translate(-50%, -50%) translateX(0); }
            25% { transform: translate(-50%, -50%) translateX(-20px); }
            75% { transform: translate(-50%, -50%) translateX(20px); }
        }

        .particle {
            position: absolute;
            width: 10px;
            height: 10px;
            background: var(--accent-color);
            border-radius: 50%;
            pointer-events: none;
            animation: particle-fall 1s ease-out forwards;
        }

        @keyframes particle-fall {
            0% { transform: translate(0, 0) scale(1); opacity: 1; }
            100% { transform: translate(var(--x), var(--y)) scale(0); opacity: 0; }
        }
        
        #start-screen, #level-complete-screen, #game-over-screen {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 200;
            color: white;
            text-align: center;
            flex-direction: column;
        }

        #start-screen h2, #level-complete-screen h2, #game-over-screen h2 {
            font-size: 3em;
            margin-bottom: 20px;
        }

        .game-button {
