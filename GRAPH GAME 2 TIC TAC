                <span>Draws</span>
                <span class="score-value draw-score" id="scoreDraw">0</span>
            </div>
            <div class="score">
                <span>AI (O)</span>
                <span class="score-value ai-score" id="scoreAI">0</span>
            </div>
        </div>
    </div>

    <div class="quiz-modal" id="quizModal">
        <div class="quiz-content">
            <div class="quiz-question" id="quizQuestion"></div>
            <div class="quiz-options" id="quizOptions"></div>
            <div class="quiz-result" id="quizResult"></div>
        </div>
    </div>

    <script>
        let currentPlayer = 'X';
        let gameBoard = ['', '', '', '', '', '', '', '', ''];
        let gameActive = true;
        let isAIThinking = false;
        let difficulty = 'easy';
        let scores = { player: 0, ai: 0, draw: 0 };
        let playerMoveCount = 0;
        let hasHint = false;

        const winningConditions = [
            [0, 1, 2],
            [3, 4, 5],
            [6, 7, 8],
            [0, 3, 6],
            [1, 4, 7],
            [2, 5, 8],
            [0, 4, 8],
            [2, 4, 6]
        ];

        const graphQuestions = [
            {
                question: "What is a bar graph used for?",
                options: ["Showing parts of a whole", "Comparing different things", "Showing how things change over time", "Drawing pictures"],
                correct: 1
            },
            {
                question: "Which graph looks like a pizza?",
                options: ["Bar graph", "Line graph", "Pie chart", "Scatter plot"],
                correct: 2
            },
            {
                question: "What does a pie chart show?",
                options: ["How things change over time", "Parts of a whole", "Comparing different things", "Connecting dots"],
                correct: 1
            },
            {
                question: "Which graph uses bars of different heights?",
                options: ["Pie chart", "Bar graph", "Line graph", "Picture graph"],
                correct: 1
            },
            {
                question: "What is a graph?",
                options: ["A type of game", "A picture that shows information", "A math problem", "A drawing of animals"],
                correct: 1
            },
            {
                question: "Which graph is best for showing temperature changes during the week?",
                options: ["Pie chart", "Bar graph", "Line graph", "Circle graph"],
                correct: 2
            },
            {
                question: "What do the tall bars in a bar graph mean?",
                options: ["Less of something", "More of something", "The same amount", "Nothing special"],
                correct: 1
            },
            {
                question: "Which graph uses dots connected by lines?",
                options: ["Bar graph", "Pie chart", "Line graph", "Picture graph"],
                correct: 2
            },
            {
                question: "If you want to show favorite fruits of students, which graph is best?",
                options: ["Line graph", "Bar graph", "Scatter plot", "None of these"],
                correct: 1
            },
            {
                question: "What do we call the numbers on the side of a graph?",
                options: ["Labels", "Scale", "Colors", "Pictures"],
                correct: 1
            },
            {
                question: "Which graph shows how many students like each color?",
                options: ["Line graph", "Bar graph", "Pie chart", "Both bar and pie charts"],
                correct: 3
            },
            {
                question: "What is a title on a graph used for?",
                options: ["Making it pretty", "Telling what the graph is about", "Drawing lines", "Counting numbers"],
                correct: 1
            },
            {
                question: "Which graph is shaped like a circle?",
                options: ["Bar graph", "Line graph", "Pie chart", "Scatter plot"],
                correct: 2
            },
            {
                question: "If you want to show your height from age 5 to 10, which graph is best?",
                options: ["Pie chart", "Bar graph", "Line graph", "Circle graph"],
                correct: 2
            },
            {
                question: "What do colors on a graph help us do?",
                options: ["Make it pretty", "Tell different things apart", "Draw better", "Count faster"],
                correct: 1
            }
        ];

        const cells = document.querySelectorAll('.cell');
        const currentPlayerDisplay = document.getElementById('currentPlayer');
        const aiMessage = document.getElementById('aiMessage');
        const quizModal = document.getElementById('quizModal');
        const hintIndicator = document.getElementById('hintIndicator');

        cells.forEach(cell => {
            cell.addEventListener('click', handleCellClick);
        });

        function handleCellClick(event) {
            if (currentPlayer !== 'X' || !gameActive || isAIThinking) {
                return;
            }

            const cell = event.target;
            const index = parseInt(cell.getAttribute('data-index'));

            if (gameBoard[index] !== '') {
                return;
            }

            makeMove(index, 'X');
            playerMoveCount++;
            
            // Show quiz after every 2 moves
            if (playerMoveCount % 2 === 0 && gameActive) {
                setTimeout(() => {
                    showQuiz();
                }, 500);
            } else if (gameActive) {
                setTimeout(() => {
                    aiMove();
                }, 500);
            }
        }

        function makeMove(index, player) {
            gameBoard[index] = player;
            const cell = cells[index];
            cell.textContent = player;
            cell.classList.add('taken', player.toLowerCase());
            createParticles(cell);
            checkResult();
        }

        function showQuiz() {
            const randomQuestion = graphQuestions[Math.floor(Math.random() * graphQuestions.length)];
            
            document.getElementById('quizQuestion').textContent = randomQuestion.question;
            const optionsContainer = document.getElementById('quizOptions');
            optionsContainer.innerHTML = '';
            
            randomQuestion.options.forEach((option, index) => {
                const button = document.createElement('button');
                button.className = 'quiz-option';
                button.textContent = option;
                button.onclick = () => checkAnswer(index, randomQuestion.correct);
                optionsContainer.appendChild(button);
            });
            
            document.getElementById('quizResult').textContent = '';
            quizModal.classList.add('show');
        }

        function checkAnswer(selected, correct) {
            const options = document.querySelectorAll('.quiz-option');
            const resultDiv = document.getElementById('quizResult');
            
            if (selected === correct) {
                options[selected].classList.add('correct');
                resultDiv.textContent = 'âœ… Awesome! You get a hint for your next move!';
                resultDiv.className = 'quiz-result correct';
                hasHint = true;
                showHintIndicator();
            } else {
                options[selected].classList.add('incorrect');
                options[correct].classList.add('correct');
                resultDiv.textContent = `âŒ Oops! The correct answer was: ${options[correct].textContent}`;
                resultDiv.className = 'quiz-result incorrect';
            }
            
            options.forEach(option => {
                option.style.pointerEvents = 'none';
            });
            
            setTimeout(() => {
                quizModal.classList.remove('show');
                if (gameActive) {
                    aiMove();
                }
            }, 2500);
        }

        function showHintIndicator() {
            hintIndicator.classList.add('show');
            setTimeout(() => {
                hintIndicator.classList.remove('show');
            }, 3000);
        }

        function aiMove() {
            if (!gameActive) return;
            
            isAIThinking = true;
            showAIMessage("Thinking...");
            currentPlayerDisplay.innerHTML = '<span class="ai-thinking">AI is thinking</span>';
            
            setTimeout(() => {
                let move;
                
                if (difficulty === 'easy') {
                    move = getRandomMove();
                } else if (difficulty === 'medium') {
                    move = Math.random() < 0.5 ? getBestMove() : getRandomMove();
                } else {
                    move = getBestMove();
                }
                
                if (move !== -1) {
                    makeMove(move, 'O');
                    showAIMessage(getAIMessage());
                }
                
                isAIThinking = false;
                if (gameActive) {
                    updateCurrentPlayerDisplay();
                    
                    // Show hint if available
                    if (hasHint) {
                        showGameHint();
                        hasHint = false;
                    }
                }
            }, 800);
        }

        function showGameHint() {
            // Find best move for player
            let bestMove = -1;
            let bestScore = -Infinity;
            
            for (let i = 0; i < 9; i++) {
                if (gameBoard[i] === '') {
                    gameBoard[i] = 'X';
                    let score = minimax(gameBoard, 0, false);
                    gameBoard[i] = '';
                    
                    if (score > bestScore) {
                        bestScore = score;
                        bestMove = i;
                    }
                }
            }
            
            if (bestMove !== -1) {
                cells[bestMove].classList.add('hint');
                setTimeout(() => {
                    cells[bestMove].classList.remove('hint');
                }, 2000);
            }
        }

        function getRandomMove() {
            const availableMoves = [];
            for (let i = 0; i < 9; i++) {
                if (gameBoard[i] === '') {
                    availableMoves.push(i);
                }
            }
            return availableMoves[Math.floor(Math.random() * availableMoves.length)];
        }

        function getBestMove() {
            let bestScore = -Infinity;
            let bestMove = -1;
            
            for (let i = 0; i < 9; i++) {
                if (gameBoard[i] === '') {
                    gameBoard[i] = 'O';
                    let score = minimax(gameBoard, 0, false);
                    gameBoard[i] = '';
                    
                    if (score > bestScore) {
                        bestScore = score;
                        bestMove = i;
                    }
                }
            }
            
            return bestMove;
        }

        function minimax(board, depth, isMaximizing) {
            const result = checkWinner();
            
            if (result === 'O') return 10 - depth;
            if (result === 'X') return depth - 10;
            if (result === 'draw') return 0;
            
            if (isMaximizing) {
                let bestScore = -Infinity;
                for (let i = 0; i < 9; i++) {
                    if (board[i] === '') {
                        board[i] = 'O';
                        let score = minimax(board, depth + 1, false);
                        board[i] = '';
                        bestScore = Math.max(score, bestScore);
                    }
                }
                return bestScore;
            } else {
                let bestScore = Infinity;
                for (let i = 0; i < 9; i++) {
                    if (board[i] === '') {
                        board[i] = 'X';
                        let score = minimax(board, depth + 1, true);
                        board[i] = '';
                        bestScore = Math.min(score, bestScore);
                    }
                }
                return bestScore;
            }
        }

        function checkWinner() {
            // Check rows
            for (let i = 0; i < 3; i++) {
                if (gameBoard[i*3] && gameBoard[i*3] === gameBoard[i*3+1] && gameBoard[i*3] === gameBoard[i*3+2]) {
                    return gameBoard[i*3];
                }
            }
            
            // Check columns
            for (let i = 0; i < 3; i++) {
                if (gameBoard[i] && gameBoard[i] === gameBoard[i+3] && gameBoard[i] === gameBoard[i+6]) {
                    return gameBoard[i];
                }
            }
            
            // Check diagonals
            if (gameBoard[0] && gameBoard[0] === gameBoard[4] && gameBoard[0] === gameBoard[8]) {
                return gameBoard[0];
            }
            if (gameBoard[2] && gameBoard[2] === gameBoard[4] && gameBoard[2] === gameBoard[6]) {
                return gameBoard[2];
            }
            
            // Check for draw
            if (!gameBoard.includes('')) {
                return 'draw';
            }
            
            return null;
        }

        function checkResult() {
            const winner = checkWinner();
            
            if (winner) {
                gameActive = false;
                
                if (winner === 'X') {
                    scores.player++;
                    showAIMessage("Good game! You won! ðŸŽ‰");
                    currentPlayerDisplay.textContent = 'ðŸŽ‰ You Win! ðŸŽ‰';
                    currentPlayerDisplay.style.background = 'linear-gradient(45deg, #f9ca24, #f0932b)';
                    createCelebration();
                } else if (winner === 'O') {
                    scores.ai++;
                    showAIMessage("Victory is mine! ðŸ¤–");
                    currentPlayerDisplay.textContent = 'ðŸ¤– AI Wins! ðŸ¤–';
                    currentPlayerDisplay.style.background = 'linear-gradient(45deg, #4ecdc4, #44a3aa)';
                } else {
                    scores.draw++;
                    showAIMessage("Well played! It's a draw! ðŸ¤");
                    currentPlayerDisplay.textContent = 'ðŸ¤ It\'s a Draw! ðŸ¤';
                    currentPlayerDisplay.style.background = 'linear-gradient(45deg, #636e72, #95a5a6)';
                }
                
                updateScoreDisplay();
                highlightWinningCells();
            }
        }

        function highlightWinningCells() {
            const winner = checkWinner();
            if (!winner || winner === 'draw') return;
            
            for (let condition of winningConditions) {
                const [a, b, c] = condition;
                if (gameBoard[a] && gameBoard[a] === gameBoard[b] && gameBoard[a] === gameBoard[c]) {
                    cells[a].classList.add('winner');
                    cells[b].classList.add('winner');
                    cells[c].classList.add('winner');
                    break;
                }
            }
        }

        function createParticles(cell) {
            const rect = cell.getBoundingClientRect();
            const colors = ['#ff6b6b', '#4ecdc4', '#f9ca24', '#667eea', '#764ba2'];
            
            for (let i = 0; i < 6; i++) {
                const particle = document.createElement('div');
                particle.className = 'confetti';
                particle.style.left = rect.left + rect.width / 2 + 'px';
                particle.style.top = rect.top + rect.height / 2 + 'px';
                particle.style.background = colors[Math.floor(Math.random() * colors.length)];
                particle.style.transform = `rotate(${Math.random() * 360}deg)`;
                document.body.appendChild(particle);
                
                setTimeout(() => particle.remove(), 3000);
            }
        }

        function createCelebration() {
            for (let i = 0; i < 30; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * window.innerWidth + 'px';
                    confetti.style.top = '-10px';
                    confetti.style.background = `hsl(${Math.random() * 360}, 100%, 50%)`;
                    confetti.style.width = Math.random() * 10 + 5 + 'px';
                    confetti.style.height = confetti.style.width;
                    document.body.appendChild(confetti);
                    
                    setTimeout(() => confetti.remove(), 3000);
                }, i * 50);
            }
        }

        function updateCurrentPlayerDisplay() {
            currentPlayerDisplay.textContent = 'Your Turn (X)';
            currentPlayerDisplay.style.background = 'linear-gradient(45deg, #ff6b6b, #ee5a24)';
        }

        function updateScoreDisplay() {
            document.getElementById('scorePlayer').textContent = scores.player;
            document.getElementById('scoreAI').textContent = scores.ai;
            document.getElementById('scoreDraw').textContent = scores.draw;
        }

        function showAIMessage(message) {
            aiMessage.textContent = message;
            aiMessage.classList.add('show');
            setTimeout(() => {
                aiMessage.classList.remove('show');
            }, 3000);
        }

        function getAIMessage() {
            const messages = [
                "Nice move! ðŸ˜‰",
                "Interesting strategy... ðŸ¤”",
                "I see what you did there! ðŸ‘€",
                "Challenge accepted! ðŸ’ª",
                "Let's see... ðŸ§",
                "Good thinking! ðŸ¤“",
                "My turn! ðŸŽ¯",
                "Calculating... ðŸ“Š"
            ];
            return messages[Math.floor(Math.random() * messages.length)];
        }

        function setDifficulty(level) {
            difficulty = level;
            document.querySelectorAll('.difficulty-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            resetGame();
        }

        function resetGame() {
            gameActive = true;
            currentPlayer = 'X';
            gameBoard = ['', '', '', '', '', '', '', '', ''];
            isAIThinking = false;
            playerMoveCount = 0;
            hasHint = false;
            
            cells.forEach(cell => {
                cell.textContent = '';
                cell.classList.remove('taken', 'x', 'o', 'winner', 'hint');
            });
            
            updateCurrentPlayerDisplay();
            showAIMessage("Let's play! Answer graph questions to get hints! ðŸ“Š");
        }

        // Initialize
        updateCurrentPlayerDisplay();
        updateScoreDisplay();
        showAIMessage("Ready to play? Answer graph questions to get hints! ðŸ“Š");
    </script>
</body>
</html>
