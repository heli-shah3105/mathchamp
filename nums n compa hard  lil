            100% { transform: scale(1); opacity: 1; }
        }
        .modal-content h2 {
            margin-top: 0;
            font-size: clamp(1.8rem, 4vw, 2.2rem);
            color: var(--primary);
        }
        .modal-content .icon {
            font-size: clamp(5rem, 12vw, 6rem);
            margin: 1rem 0;
        }
        .modal-content p {
            font-size: clamp(1.2rem, 3vw, 1.4rem);
            margin: 1rem 0;
        }
