<body>
    <div class="bg-shape shape1"></div>
    <div class="bg-shape shape2"></div>
    <div class="bg-shape shape3"></div>

    <div class="scroll-container">
        <div class="game-container">
            <header>
                <h1>üåà Fun Counting Adventure! üéà</h1>
                <div class="score-board">
                    <div class="score-item">‚≠ê Score: <span id="score">0</span></div>
                    <div class="score-item">üéØ Level: <span id="level">1</span></div>
                </div>
                <div class="game-mode">
                    <button class="mode-btn active" onclick="switchMode('count')">üî¢ Count Mode</button>
                    <button class="mode-btn" onclick="switchMode('select')">üéØ Select Mode</button>
                </div>
            </header>

            <main class="game-area">
                <div class="question" id="question">Let's count the cute animals! üêæ</div>
                
                <div class="counter" id="counter"></div>
                
                <div class="items-container" id="itemsContainer">
                    <!-- Items will be dynamically added here -->
                </div>

                <div class="answer-buttons" id="answerButtons">
                    <!-- Answer buttons will be dynamically added here -->
                </div>

                <button class="check-btn" id="checkBtn" onclick="checkSelection()">
                    Check My Selection! ‚úÖ
                </button>

                <div class="feedback" id="feedback"></div>
                
                <button class="next-btn" id="nextBtn" onclick="nextQuestion()">
                    Next Round! üöÄ
                </button>
            </main>
        </div>
    </div>

    <button class="scroll-top" id="scrollTop" onclick="scrollToTop()">
        ‚¨ÜÔ∏è
    </button>

    <script>
        const animals = ['üê∂', 'üê±', 'üê≠', 'üêπ', 'üê∞', 'ü¶ä', 'üêª', 'üêº', 'üê®', 'üêØ', 'ü¶Å', 'üêÆ', 'üê∑', 'üê∏', 'üêµ'];
        const fruits = ['üçé', 'üçä', 'üçã', 'üçå', 'üçâ', 'üçá', 'üçì', 'ü´ê', 'üçà', 'üçí', 'üçë', 'ü•≠', 'üçç', 'ü••', 'ü•ù'];
        const toys = ['üéà', 'üé®', 'üéØ', 'üé™', 'üé≠', 'üé∏', 'üé∫', 'ü•Å', 'üé≤', 'üß∏', 'üéÆ', 'üöÄ', 'üöó', 'üöÇ', 'üöÅ'];
        const sweets = ['üç´', 'üç¨', 'üç≠', 'üßÅ', 'üç©', 'üç™', 'üç∞', 'üéÇ', 'üçÆ', 'üçØ'];
        
        let score = 0;
        let level = 1;
        let currentAnswer = 0;
        let isAnswered = false;
        let gameMode = 'count';
        let selectedItems = [];
        let targetItem = '';
        let targetCount = 0;

        // Scroll to top functionality
        window.addEventListener('scroll', function() {
            const scrollTop = document.getElementById('scrollTop');
            if (window.pageYOffset > 200) {
                scrollTop.classList.add('show');
            } else {
                scrollTop.classList.remove('show');
            }
        });

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        function getRandomItem() {
            const allItems = [...animals, ...fruits, ...toys, ...sweets];
            return allItems[Math.floor(Math.random() * allItems.length)];
        }

        function switchMode(mode) {
            gameMode = mode;
            document.querySelectorAll('.mode-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            isAnswered = false;
            document.getElementById('feedback').textContent = '';
            document.getElementById('nextBtn').classList.remove('show');
            document.getElementById('checkBtn').classList.remove('show');
            
            // Scroll to game area
            document.querySelector('.game-area').scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            if (mode === 'count') {
                document.getElementById('counter').style.display = 'none';
                document.getElementById('answerButtons').style.display = 'flex';
                document.getElementById('checkBtn').style.display = 'none';
                createCountQuestion();
            } else {
                document.getElementById('counter').style.display = 'block';
                document.getElementById('answerButtons').style.display = 'none';
                document.getElementById('checkBtn').style.display = 'block';
                createSelectQuestion();
            }
        }

        function createCountQuestion() {
            const itemCount = Math.min(Math.floor(Math.random() * 5) + 2, 2 + Math.floor(level / 2));
            const item = getRandomItem();
            currentAnswer = itemCount;
            
            const itemsContainer = document.getElementById('itemsContainer');
            itemsContainer.innerHTML = '';
            
            for (let i = 0; i < itemCount; i++) {
                setTimeout(() => {
                    const itemElement = document.createElement('div');
                    itemElement.className = 'item';
                    itemElement.textContent = item;
                    itemElement.style.animationDelay = `${i * 0.1}s`;
                    itemsContainer.appendChild(itemElement);
                    
                    itemElement.addEventListener('click', function() {
                        if (!isAnswered) {
                            this.classList.add('clicked');
                            playClickSound();
                        }
                    });
                }, i * 100);
            }
            
            document.getElementById('question').textContent = `How many ${item} do you see? ü§î`;
            createAnswerButtons(itemCount);
        }

        function createSelectQuestion() {
            const totalItems = Math.min(12 + Math.floor(level / 2), 20);
            const itemTypes = [];
            const itemCounts = {};
            
            // Generate 3-4 different item types
            const numTypes = Math.min(3 + Math.floor(level / 3), 4);
            for (let i = 0; i < numTypes; i++) {
                const item = getRandomItem();
                if (!itemTypes.includes(item)) {
                    itemTypes.push(item);
                    itemCounts[item] = Math.floor(Math.random() * 5) + 2;
                }
            }
            
            // Adjust counts to match total
            let currentTotal = 0;
            itemTypes.forEach(item => {
                currentTotal += itemCounts[item];
            });
            
            // Add or remove items to reach target total
            while (currentTotal < totalItems) {
                const randomItem = itemTypes[Math.floor(Math.random() * itemTypes.length)];
                itemCounts[randomItem]++;
                currentTotal++;
            }
            
            // Select target item and count
            targetItem = itemTypes[Math.floor(Math.random() * itemTypes.length)];
            targetCount = itemCounts[targetItem];
            
            // Create the display
            const itemsContainer = document.getElementById('itemsContainer');
            itemsContainer.innerHTML = '';
            selectedItems = [];
            
            const allDisplayItems = [];
            itemTypes.forEach(item => {
                for (let i = 0; i < itemCounts[item]; i++) {
                    allDisplayItems.push(item);
                }
            });
            
            // Shuffle the items
            allDisplayItems.sort(() => Math.random() - 0.5);
            
            // Display items with animation
            allDisplayItems.forEach((item, index) => {
                setTimeout(() => {
                    const itemElement = document.createElement('div');
                    itemElement.className = 'item';
                    itemElement.textContent = item;
                    itemElement.dataset.itemType = item;
                    itemElement.style.animationDelay = `${index * 0.05}s`;
                    itemsContainer.appendChild(itemElement);
                    
                    itemElement.addEventListener('click', function() {
                        if (!isAnswered) {
                            toggleSelection(this);
                        }
                    });
                }, index * 50);
            });
            
            document.getElementById('question').textContent = `Click on all the ${targetItem}! üéØ`;
            document.getElementById('counter').textContent = `Selected: 0 | Need: ${targetCount}`;
        }

        function toggleSelection(element) {
            const itemType = element.dataset.itemType;
            
            if (element.classList.contains('selected')) {
                element.classList.remove('selected');
                selectedItems = selectedItems.filter(item => item !== itemType);
            } else {
                element.classList.add('selected');
                selectedItems.push(itemType);
            }
            
            const selectedCount = selectedItems.filter(item => item === targetItem).length;
            document.getElementById('counter').textContent = `Selected: ${selectedCount} | Need: ${targetCount}`;
            
            if (selectedCount > 0) {
                document.getElementById('checkBtn').classList.add('show');
            } else {
                document.getElementById('checkBtn').classList.remove('show');
            }
            
            playClickSound();
        }

        function checkSelection() {
            if (isAnswered) return;
            
            isAnswered = true;
            const feedback = document.getElementById('feedback');
            const selectedCount = selectedItems.filter(item => item === targetItem).length;
            const allItems = document.querySelectorAll('.item');
            
            // Show which items were correct/wrong
            allItems.forEach(item => {
                if (item.dataset.itemType === targetItem) {
                    if (item.classList.contains('selected')) {
                        item.classList.add('correct-select');
                    }
                } else if (item.classList.contains('selected')) {
                    item.classList.add('wrong-select');
                }
            });
            
            if (selectedCount === targetCount) {
                feedback.textContent = `üéâ Perfect! You found all ${targetCount} ${targetItem}! üåü`;
                feedback.className = 'feedback success';
                score += 15;
                document.getElementById('score').textContent = score;
                
                createConfetti();
                createStars();
                playSuccessSound();
                
                if (score % 30 === 0) {
                    level++;
                    document.getElementById('level').textContent = level;
                    feedback.textContent = `üéä Level Up! You're now on level ${level}! üéä`;
                }
            } else {
                feedback.textContent = `Oops! You selected ${selectedCount}, but there were ${targetCount} ${targetItem}. Try again! üí™`;
                feedback.className = 'feedback error';
                playErrorSound();
            }
            
            document.getElementById('checkBtn').classList.remove('show');
            document.getElementById('nextBtn').classList.add('show');
            
            // Scroll to feedback
            feedback.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        function createAnswerButtons(correctAnswer) {
            const answerButtons = document.getElementById('answerButtons');
            answerButtons.innerHTML = '';
            
            const answers = [correctAnswer];
            while (answers.length < 3) {
                const wrongAnswer = Math.floor(Math.random() * 8) + 1;
                if (!answers.includes(wrongAnswer)) {
                    answers.push(wrongAnswer);
                }
            }
            
            answers.sort(() => Math.random() - 0.5);
            
            answers.forEach((answer, index) => {
                setTimeout(() => {
                    const button = document.createElement('button');
                    button.className = 'answer-btn';
                    button.textContent = answer;
                    button.onclick = () => checkAnswer(answer, button);
                    answerButtons.appendChild(button);
                }, index * 100);
            });
        }

        function checkAnswer(answer, button) {
            if (isAnswered) return;
            
            isAnswered = true;
            const feedback = document.getElementById('feedback');
            
            if (answer === currentAnswer) {
                button.classList.add('correct');
                feedback.textContent = 'üéâ Awesome! You got it right! üåü';
                feedback.className = 'feedback success';
                score += 10;
                document.getElementById('score').textContent = score;
                
                createConfetti();
                createStars();
                playSuccessSound();
                
                if (score % 30 === 0) {
                    level++;
                    document.getElementById('level').textContent = level;
                    feedback.textContent = `üéä Level Up! You're now on level ${level}! üéä`;
                }
            } else {
                button.classList.add('wrong');
                feedback.textContent = `Oops! The answer was ${currentAnswer}. Try again! üí™`;
                feedback.className = 'feedback error';
                playErrorSound();
            }
            
            document.getElementById('nextBtn').classList.add('show');
            
            // Scroll to feedback
            feedback.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        function nextQuestion() {
            isAnswered = false;
            document.getElementById('feedback').textContent = '';
            document.getElementById('nextBtn').classList.remove('show');
            
            // Scroll to top of game area
            document.querySelector('.game-area').scrollIntoView({ behavior: 'smooth', block: 'start' });
            
            if (gameMode === 'count') {
                createCountQuestion();
            } else {
                createSelectQuestion();
            }
        }

        function createConfetti() {
            const colors = ['#ff6b6b', '#ffd93d', '#4ecdc4', '#667eea', '#ff9ff3'];
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animationDelay = Math.random() * 0.5 + 's';
                    document.body.appendChild(confetti);
                    
                    setTimeout(() => confetti.remove(), 3000);
                }, i * 50);
            }
        }

        function createStars() {
            for (let i = 0; i < 5; i++) {
                setTimeout(() => {
                    const star = document.createElement('div');
                    star.className = 'star';
                    star.textContent = '‚≠ê';
                    star.style.left = Math.random() * 80 + 10 + '%';
                    star.style.top = '50%';
                    document.body.appendChild(star);
                    
                    setTimeout(() => star.remove(), 2000);
                }, i * 100);
            }
        }

        function playClickSound() {
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            oscillator.frequency.value = 800;
            oscillator.type = 'sine';
            gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.1);
            
            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + 0.1);
        }

        function playSuccessSound() {
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const notes = [523, 659, 784, 1047];
            
            notes.forEach((freq, index) => {
                setTimeout(() => {
                    const oscillator = audioContext.createOscillator();
                    const gainNode = audioContext.createGain();
                    
                    oscillator.connect(gainNode);
                    gainNode.connect(audioContext.destination);
                    
                    oscillator.frequency.value = freq;
                    oscillator.type = 'sine';
                    gainNode.gain.setValueAtTime(0.2, audioContext.currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.3);
                    
                    oscillator.start(audioContext.currentTime);
                    oscillator.stop(audioContext.currentTime + 0.3);
                }, index * 100);
            });
        }

        function playErrorSound() {
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            oscillator.frequency.value = 200;
            oscillator.type = 'sawtooth';
            gainNode.gain.setValueAtTime(0.2, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.2);
            
            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + 0.2);
        }

        // Start the game
        window.onload = function() {
            createCountQuestion();
        };
    </script>
</body>
</html>
