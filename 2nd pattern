    <div class="pattern-challenge" id="patternChallenge">
        <h3>üß© Pattern Challenge!</h3>
        <div class="pattern-attempts" id="patternAttempts">Attempts remaining: 3</div>
        <div class="pattern-question" id="patternQuestion">What comes next in this pattern?</div>
        <div class="pattern-display" id="patternDisplay"></div>
        <div class="pattern-options" id="patternOptions"></div>
        <div class="pattern-buttons">
            <button class="btn" onclick="checkPatternAnswer()">Submit Answer</button>
            <button class="btn" onclick="getHint()">Get Hint</button>
        </div>
        <div class="pattern-hint" id="patternHint"></div>
