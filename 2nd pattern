    <script>
        const ROWS = 6;
        const COLS = 7;
        const PLAYER = 1;
        const AI = 2;
        
        let board = [];
        let currentPlayer = PLAYER;
        let gameActive = true;
        let playerScore = 0;
        let aiScore = 0;
        let difficulty = 'medium';
        let moveCount = 0;
        let patternChallengeActive = false;
        let pendingMove = null;
        let currentPatternProblem = null;
        let patternAttempts = 3;
        let selectedOption = null;

        // Initialize the game
        function initGame() {
            board = Array(ROWS).fill().map(() => Array(COLS).fill(0));
            currentPlayer = PLAYER;
            gameActive = true;
            moveCount = 0;
            patternChallengeActive = false;
            pendingMove = null;
            currentPatternProblem = null;
            patternAttempts = 3;
            selectedOption = null;
            createBoard();
            updateTurnDisplay();
            updateMoveCount();
            loadScores();
        }

        // Create the board UI
        function createBoard() {
            const boardElement = document.getElementById('board');
            boardElement.innerHTML = '';
            
            for (let row = 0; row < ROWS; row++) {
                for (let col = 0; col < COLS; col++) {
                    const cell = document.createElement('div');
                    cell.className = 'cell';
                    cell.dataset.row = row;
                    cell.dataset.col = col;
                    cell.onclick = () => handleCellClick(col);
                    boardElement.appendChild(cell);
                }
            }
        }

        // Handle cell click
        function handleCellClick(col) {
            if (!gameActive || currentPlayer !== PLAYER || patternChallengeActive) return;
            
            const row = getAvailableRow(col);
            if (row === -1) return;
            
            // Check if we need a pattern challenge
            if ((moveCount + 1) % 5 === 0) {
                pendingMove = { row, col };
                showPatternChallenge();
                return;
            }
            
            makeMove(row, col, PLAYER);
            
            if (gameActive) {
                currentPlayer = AI;
                updateTurnDisplay();
                setTimeout(() => makeAIMove(), 500);
            }
        }

        // Show pattern challenge
        function showPatternChallenge() {
            patternChallengeActive = true;
            patternAttempts = 3;
            selectedOption = null;
            currentPatternProblem = generatePatternProblem();
            
            document.getElementById('patternQuestion').textContent = currentPatternProblem.question;
            document.getElementById('patternAttempts').textContent = `Attempts remaining: ${patternAttempts}`;
            document.getElementById('patternHint').classList.remove('show');
            
            // Display pattern
            const patternDisplay = document.getElementById('patternDisplay');
            patternDisplay.innerHTML = '';
            
            currentPatternProblem.pattern.forEach((item, index) => {
                const itemElement = document.createElement('div');
                itemElement.className = `pattern-item ${item.type}`;
                
                if (item.type === 'number') {
                    itemElement.textContent = item.value;
                } else if (item.type === 'shape') {
                    const shapeElement = document.createElement('div');
                    shapeElement.className = `shape-${item.value}`;
                    itemElement.appendChild(shapeElement);
                } else if (item.type === 'question') {
                    itemElement.textContent = '?';
                }
                
                patternDisplay.appendChild(itemElement);
            });
            
            // Display options
            const optionsContainer = document.getElementById('patternOptions');
            optionsContainer.innerHTML = '';
            
            currentPatternProblem.options.forEach((option, index) => {
                const optionElement = document.createElement('div');
                optionElement.className = 'pattern-option';
                optionElement.dataset.index = index;
                
                if (option.type === 'number') {
                    optionElement.textContent = option.value;
                } else if (option.type === 'shape') {
                    const shapeElement = document.createElement('div');
                    shapeElement.className = `shape-${option.value}`;
                    optionElement.appendChild(shapeElement);
                }
                
                optionElement.onclick = () => selectOption(index);
                optionsContainer.appendChild(optionElement);
            });
            
            document.getElementById('patternChallenge').classList.add('show');
            document.getElementById('overlay').classList.add('show');
        }

        // Select option
        function selectOption(index) {
            // Remove previous selection
            document.querySelectorAll('.pattern-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // Add selection to clicked option
            document.querySelector(`.pattern-option[data-index="${index}"]`).classList.add('selected');
            selectedOption = index;
        }

        // Generate pattern problem
        function generatePatternProblem() {
            const patternTypes = ['number', 'shape'];
            const patternType = patternTypes[Math.floor(Math.random() * patternTypes.length)];
            
            if (patternType === 'number') {
                return generateNumberPattern();
            } else {
                return generateShapePattern();
            }
        }

        // Generate number pattern
        function generateNumberPattern() {
            const patterns = [
                // Arithmetic progression
                {
                    pattern: [
                        { type: 'number', value: 2 },
                        { type: 'number', value: 4 },
                        { type: 'number', value: 6 },
                        { type: 'number', value: 8 },
                        { type: 'question' }
                    ],
                    answer: { type: 'number', value: 10 },
                    hint: 'Add 2 to each number to get the next one',
                    question: 'What number comes next in this sequence?'
                },
                {
                    pattern: [
                        { type: 'number', value: 5 },
                        { type: 'number', value: 10 },
                        { type: 'number', value: 15 },
                        { type: 'number', value: 20 },
                        { type: 'question' }
                    ],
                    answer: { type: 'number', value: 25 },
                    hint: 'Add 5 to each number to get the next one',
                    question: 'What number comes next in this sequence?'
                },
                // Geometric progression
                {
                    pattern: [
                        { type: 'number', value: 2 },
                        { type: 'number', value: 4 },
                        { type: 'number', value: 8 },
                        { type: 'number', value: 16 },
                        { type: 'question' }
                    ],
                    answer: { type: 'number', value: 32 },
                    hint: 'Multiply each number by 2 to get the next one',
                    question: 'What number comes next in this sequence?'
                },
                // Fibonacci
                {
                    pattern: [
                        { type: 'number', value: 1 },
                        { type: 'number', value: 1 },
                        { type: 'number', value: 2 },
                        { type: 'number', value: 3 },
                        { type: 'number', value: 5 },
                        { type: 'question' }
                    ],
                    answer: { type: 'number', value: 8 },
                    hint: 'Each number is the sum of the two previous numbers',
                    question: 'What number comes next in this Fibonacci sequence?'
                },
                // Squares
                {
                    pattern: [
                        { type: 'number', value: 1 },
                        { type: 'number', value: 4 },
                        { type: 'number', value: 9 },
                        { type: 'number', value: 16 },
                        { type: 'question' }
                    ],
                    answer: { type: 'number', value: 25 },
                    hint: 'These are square numbers: 1¬≤, 2¬≤, 3¬≤, 4¬≤...',
                    question: 'What number comes next in this sequence?'
                },
                // Alternating pattern
                {
                    pattern: [
                        { type: 'number', value: 3 },
                        { type: 'number', value: 6 },
                        { type: 'number', value: 5 },
                        { type: 'number', value: 10 },
                        { type: 'number', value: 7 },
                        { type: 'question' }
                    ],
                    answer: { type: 'number', value: 14 },
                    hint: 'Two alternating patterns: +3, -1, +5, -3, +7...',
                    question: 'What number comes next in this sequence?'
                }
            ];
            
            const selectedPattern = patterns[Math.floor(Math.random() * patterns.length)];
            
            // Generate wrong options
            const options = [selectedPattern.answer];
            const wrongAnswers = generateWrongNumberAnswers(selectedPattern.answer.value);
            
            wrongAnswers.forEach(answer => {
                options.push({ type: 'number', value: answer });
            });
            
            // Shuffle options
            options.sort(() => Math.random() - 0.5);
            
            return {
                ...selectedPattern,
                options,
                correctIndex: options.findIndex(opt => 
                    opt.type === selectedPattern.answer.type && 
                    opt.value === selectedPattern.answer.value
                )
            };
        }

        // Generate shape pattern
        function generateShapePattern() {
            const shapes = ['circle', 'square', 'triangle', 'diamond', 'star'];
            const patterns = [
                // Simple rotation
                {
                    pattern: [
                        { type: 'shape', value: 'circle' },
                        { type: 'shape', value: 'square' },
                        { type: 'shape', value: 'triangle' },
                        { type: 'shape', value: 'diamond' },
                        { type: 'question' }
                    ],
                    answer: { type: 'shape', value: 'star' },
                    hint: 'The shapes are rotating through the sequence: circle ‚Üí square ‚Üí triangle ‚Üí diamond ‚Üí star',
                    question: 'What shape comes next in this sequence?'
                },
                // Alternating pattern
                {
                    pattern: [
                        { type: 'shape', value: 'circle' },
                        { type: 'shape', value: 'triangle' },
                        { type: 'shape', value: 'circle' },
                        { type: 'shape', value: 'triangle' },
                        { type: 'question' }
                    ],
                    answer: { type: 'shape', value: 'circle' },
                    hint: 'The pattern alternates between circle and triangle',
                    question: 'What shape comes next in this sequence?'
                },
                // Growing complexity
                {
                    pattern: [
                        { type: 'shape', value: 'circle' },
                        { type: 'shape', value: 'circle' },
                        { type: 'shape', value: 'square' },
                        { type: 'shape', value: 'circle' },
                        { type: 'shape', value: 'square' },
                        { type: 'shape', value: 'triangle' },
                        { type: 'question' }
                    ],
                    answer: { type: 'shape', value: 'circle' },
                    hint: 'The pattern grows in complexity: 1 circle, 2 circles, 1 square, 1 circle+1 square, 1 circle+1 square+1 triangle...',
                    question: 'What shape comes next in this sequence?'
                },
                // Color pattern (simulated with shape order)
                {
                    pattern: [
                        { type: 'shape', value: 'circle' },
                        { type: 'shape', value: 'square' },
                        { type: 'shape', value: 'square' },
                        { type: 'shape', value: 'triangle' },
                        { type: 'shape', value: 'triangle' },
                        { type: 'shape', value: 'triangle' },
                        { type: 'question' }
                    ],
                    answer: { type: 'shape', value: 'diamond' },
                    hint: 'Each shape appears one more time than the previous: 1 circle, 2 squares, 3 triangles...',
                    question: 'What shape comes next in this sequence?'
                }
            ];
            
            const selectedPattern = patterns[Math.floor(Math.random() * patterns.length)];
            
            // Generate wrong options
            const options = [selectedPattern.answer];
            const wrongShapes = shapes.filter(shape => shape !== selectedPattern.answer.value);
            
            // Take 3 random wrong shapes
            while (options.length < 4 && wrongShapes.length > 0) {
                const randomIndex = Math.floor(Math.random() * wrongShapes.length);
                options.push({ type: 'shape', value: wrongShapes[randomIndex] });
                wrongShapes.splice(randomIndex, 1);
            }
            
            // Shuffle options
            options.sort(() => Math.random() - 0.5);
            
            return {
                ...selectedPattern,
                options,
                correctIndex: options.findIndex(opt => 
                    opt.type === selectedPattern.answer.type && 
                    opt.value === selectedPattern.answer.value
                )
            };
        }

        // Generate wrong number answers
        function generateWrongNumberAnswers(correctAnswer) {
            const wrongAnswers = [];
            
            // Add a number that's close but wrong
            wrongAnswers.push(correctAnswer + 2);
            
            // Add a number that's a multiple or factor
            if (correctAnswer % 2 === 0) {
                wrongAnswers.push(correctAnswer / 2);
            } else {
                wrongAnswers.push(correctAnswer * 2);
            }
            
            // Add a random number
            wrongAnswers.push(Math.floor(Math.random() * 30) + 1);
            
            // Make sure all answers are unique
            const uniqueAnswers = [...new Set(wrongAnswers)];
            while (uniqueAnswers.length < 3) {
                uniqueAnswers.push(Math.floor(Math.random() * 30) + 1);
            }
            
            return uniqueAnswers.slice(0, 3);
        }

        // Check pattern answer
        function checkPatternAnswer() {
            if (selectedOption === null) {
                // Shake animation for no selection
                const optionsContainer = document.getElementById('patternOptions');
                optionsContainer.style.animation = 'shake 0.5s';
                setTimeout(() => {
                    optionsContainer.style.animation = '';
                }, 500);
                return;
            }
            
            if (selectedOption === currentPatternProblem.correctIndex) {
                // Correct answer
                closePatternChallenge();
                if (pendingMove) {
                    makeMove(pendingMove.row, pendingMove.col, PLAYER);
                    pendingMove = null;
                    
                    if (gameActive) {
                        currentPlayer = AI;
                        updateTurnDisplay();
                        setTimeout(() => makeAIMove(), 500);
                    }
                }
            } else {
                // Wrong answer
                patternAttempts--;
                document.getElementById('patternAttempts').textContent = `Attempts remaining: ${patternAttempts}`;
                
                if (patternAttempts <= 0) {
                    // Out of attempts, skip turn
                    closePatternChallenge();
                    pendingMove = null;
                    currentPlayer = AI;
                    updateTurnDisplay();
                    setTimeout(() => makeAIMove(), 500);
                } else {
                    // Shake animation for wrong answer
                    const selectedElement = document.querySelector('.pattern-option.selected');
                    selectedElement.style.animation = 'shake 0.5s';
                    setTimeout(() => {
                        selectedElement.style.animation = '';
                    }, 500);
                }
            }
        }

        // Get hint
        function getHint() {
            document.getElementById('patternHint').textContent = currentPatternProblem.hint;
            document.getElementById('patternHint').classList.add('show');
        }

        // Close pattern challenge
        function closePatternChallenge() {
            patternChallengeActive = false;
            document.getElementById('patternChallenge').classList.remove('show');
            document.getElementById('overlay').classList.remove('show');
        }

        // Get the lowest available row in a column
        function getAvailableRow(col) {
            for (let row = ROWS - 1; row >= 0; row--) {
                if (board[row][col] === 0) {
                    return row;
                }
            }
            return -1;
        }

        // Make a move
        function makeMove(row, col, player) {
            board[row][col] = player;
            updateCell(row, col, player);
            moveCount++;
            updateMoveCount();
            
            if (checkWin(row, col, player)) {
                endGame(player);
            } else if (checkDraw()) {
                endGame(0);
            } else {
                currentPlayer = currentPlayer === PLAYER ? AI : PLAYER;
                updateTurnDisplay();
            }
        }

        // Update cell UI
        function updateCell(row, col, player) {
            const cell = document.querySelector(`[data-row="${row}"][data-col="${col}"]`);
            const disc = document.createElement('div');
            disc.className = `disc ${player === PLAYER ? 'player' : 'ai'}`;
            cell.appendChild(disc);
        }

        // Check for win
        function checkWin(row, col, player) {
            // Check horizontal
            if (checkDirection(row, col, player, 0, 1)) return true;
            // Check vertical
            if (checkDirection(row, col, player, 1, 0)) return true;
            // Check diagonal (top-left to bottom-right)
            if (checkDirection(row, col, player, 1, 1)) return true;
            // Check diagonal (top-right to bottom-left)
            if (checkDirection(row, col, player, 1, -1)) return true;
            
            return false;
        }

        // Check a specific direction for win
        function checkDirection(row, col, player, deltaRow, deltaCol) {
            let count = 1;
            let winningCells = [{row, col}];
            
            // Check forward direction
            let r = row + deltaRow;
            let c = col + deltaCol;
            while (r >= 0 && r < ROWS && c >= 0 && c < COLS && board[r][c] === player) {
                count++;
                winningCells.push({row: r, col: c});
                r += deltaRow;
                c += deltaCol;
            }
            
            // Check backward direction
            r = row - deltaRow;
            c = col - deltaCol;
            while (r >= 0 && r < ROWS && c >= 0 && c < COLS && board[r][c] === player) {
                count++;
                winningCells.push({row: r, col: c});
                r -= deltaRow;
                c -= deltaCol;
            }
            
            if (count >= 4) {
                highlightWinningCells(winningCells);
                return true;
            }
            
            return false;
        }

        // Highlight winning cells
        function highlightWinningCells(cells) {
            cells.forEach(({row, col}) => {
                const cell = document.querySelector(`[data-row="${row}"][data-col="${col}"]`);
                const disc = cell.querySelector('.disc');
                if (disc) {
                    disc.classList.add('winning');
                }
            });
        }

        // Check for draw
        function checkDraw() {
            for (let col = 0; col < COLS; col++) {
                if (board[0][col] === 0) return false;
            }
            return true;
        }

        // AI move
        function makeAIMove() {
            if (!gameActive || currentPlayer !== AI) return;
            
            let col;
            const difficultyLevel = document.getElementById('difficulty').value;
            
            if (difficultyLevel === 'easy') {
                col = getRandomMove();
            } else if (difficultyLevel === 'medium') {
                col = Math.random() < 0.7 ? getBestMove() : getRandomMove();
            } else {
                col = getBestMove();
            }
            
            const row = getAvailableRow(col);
            if (row !== -1) {
                makeMove(row, col, AI);
            }
        }

        // Get random move
        function getRandomMove() {
            const availableCols = [];
            for (let col = 0; col < COLS; col++) {
                if (board[0][col] === 0) {
                    availableCols.push(col);
                }
            }
            return availableCols[Math.floor(Math.random() * availableCols.length)];
        }

        // Get best move using minimax algorithm
        function getBestMove() {
            let bestScore = -Infinity;
            let bestCol = 0;
            
            for (let col = 0; col < COLS; col++) {
                const row = getAvailableRow(col);
                if (row === -1) continue;
                
                board[row][col] = AI;
                const score = minimax(board, 3, -Infinity, Infinity, false);
                board[row][col] = 0;
                
                if (score > bestScore) {
                    bestScore = score;
                    bestCol = col;
                }
            }
            
            return bestCol;
        }

        // Minimax algorithm
        function minimax(board, depth, alpha, beta, isMaximizing) {
            if (depth === 0) return evaluateBoard();
            
            if (isMaximizing) {
                let maxScore = -Infinity;
                for (let col = 0; col < COLS; col++) {
                    const row = getAvailableRow(col);
                    if (row === -1) continue;
                    
                    board[row][col] = AI;
                    const score = minimax(board, depth - 1, alpha, beta, false);
                    board[row][col] = 0;
                    maxScore = Math.max(score, maxScore);
                    alpha = Math.max(alpha, score);
                    if (beta <= alpha) break;
                }
                return maxScore;
            } else {
                let minScore = Infinity;
                for (let col = 0; col < COLS; col++) {
                    const row = getAvailableRow(col);
                    if (row === -1) continue;
                    
                    board[row][col] = PLAYER;
                    const score = minimax(board, depth - 1, alpha, beta, true);
                    board[row][col] = 0;
                    minScore = Math.min(score, minScore);
                    beta = Math.min(beta, score);
                    if (beta <= alpha) break;
                }
                return minScore;
            }
        }

        // Evaluate board position
        function evaluateBoard() {
            let score = 0;
            
            // Center column preference
            for (let row = 0; row < ROWS; row++) {
                if (board[row][3] === AI) score += 3;
            }
            
            // Check all possible 4-in-a-row combinations
            for (let row = 0; row < ROWS; row++) {
                for (let col = 0; col < COLS; col++) {
                    // Horizontal
                    if (col <= COLS - 4) {
                        score += evaluateLine(board[row][col], board[row][col+1], board[row][col+2], board[row][col+3]);
                    }
                    // Vertical
                    if (row <= ROWS - 4) {
                        score += evaluateLine(board[row][col], board[row+1][col], board[row+2][col], board[row+3][col]);
                    }
                    // Diagonal
                    if (row <= ROWS - 4 && col <= COLS - 4) {
                        score += evaluateLine(board[row][col], board[row+1][col+1], board[row+2][col+2], board[row+3][col+3]);
                    }
                    if (row <= ROWS - 4 && col >= 3) {
                        score += evaluateLine(board[row][col], board[row+1][col-1], board[row+2][col-2], board[row+3][col-3]);
                    }
                }
            }
            
            return score;
        }

        // Evaluate a line of 4 cells
        function evaluateLine(a, b, c, d) {
            let score = 0;
            const line = [a, b, c, d];
            
            const aiCount = line.filter(cell => cell === AI).length;
            const playerCount = line.filter(cell => cell === PLAYER).length;
            
            if (aiCount === 4) score += 1000;
            else if (aiCount === 3 && playerCount === 0) score += 50;
            else if (aiCount === 2 && playerCount === 0) score += 10;
            
            if (playerCount === 4) score -= 1000;
            else if (playerCount === 3 && aiCount === 0) score -= 50;
            else if (playerCount === 2 && aiCount === 0) score -= 10;
            
            return score;
        }

        // End game
        function endGame(winner) {
            gameActive = false;
            
            if (winner === PLAYER) {
                playerScore++;
                showMessage('üéâ You Win!', 'Congratulations! You beat the AI!');
            } else if (winner === AI) {
                aiScore++;
                showMessage('ü§ñ AI Wins!', 'The AI was too smart this time!');
            } else {
                showMessage('ü§ù Draw!', "It's a tie! Well played!");
            }
            
            updateScores();
            saveScores();
        }

        // Show message
        function showMessage(title, text) {
            document.getElementById('messageTitle').textContent = title;
            document.getElementById('messageText').textContent = text;
            document.getElementById('message').classList.add('show');
            document.getElementById('overlay').classList.add('show');
        }

        // Close message
        function closeMessage() {
            document.getElementById('message').classList.remove('show');
            document.getElementById('overlay').classList.remove('show');
            resetGame();
        }

        // Update turn display
        function updateTurnDisplay() {
            const turnElement = document.getElementById('currentTurn');
            turnElement.textContent = currentPlayer === PLAYER ? 'Your Turn' : 'AI Thinking...';
            turnElement.style.color = currentPlayer === PLAYER ? '#ff6b6b' : '#4ecdc4';
        }

        // Update move count
        function updateMoveCount() {
            document.getElementById('moveCount').textContent = moveCount;
        }

        // Update scores
        function updateScores() {
            document.getElementById('playerScore').textContent = playerScore;
            document.getElementById('aiScore').textContent = aiScore;
        }

        // Save scores to localStorage
        function saveScores() {
            localStorage.setItem('patternConnect4PlayerScore', playerScore);
            localStorage.setItem('patternConnect4AiScore', aiScore);
        }

        // Load scores from localStorage
        function loadScores() {
            playerScore = parseInt(localStorage.getItem('patternConnect4PlayerScore') || '0');
            aiScore = parseInt(localStorage.getItem('patternConnect4AiScore') || '0');
            updateScores();
        }

        // Reset game
        function resetGame() {
            initGame();
        }

        // Reset scores
        function resetScores() {
            playerScore = 0;
            aiScore = 0;
            updateScores();
            saveScores();
            resetGame();
        }

        // Add shake animation for wrong answers
        const style = document.createElement('style');
        style.textContent = `
            @keyframes shake {
                0%, 100% { transform: translateX(0); }
                25% { transform: translateX(-10px); }
                75% { transform: translateX(10px); }
            }
        `;
        document.head.appendChild(style);

        // Initialize game on load
        window.onload = initGame;
    </script>
</body>
</html>
