    <script>
        let currentLevel = 1;
        let score = 0;
        let stars = 0;
        let questionsAnswered = 0;
        let totalQuestions = 0;
        let currentQuestion = null;
        let hintShown = false;

        const levelData = {
            1: {
                name: "Half & Quarter Fun",
                totalQuestions: 6,
                questions: [
                    { 
                        fraction: "1/2", 
                        options: ["1/2", "1/4", "3/4", "1"], 
                        correct: "1/2",
                        hint: "Look at the pizza! Half of it is eaten - that's 1 out of 2 slices."
                    },
                    { 
                        fraction: "1/4", 
                        options: ["1/2", "1/4", "3/4", "1"], 
                        correct: "1/4",
                        hint: "Only one slice is eaten out of 4 total slices. That's 1/4!"
                    },
                    { 
                        fraction: "3/4", 
                        options: ["1/2", "1/4", "3/4", "1"], 
                        correct: "3/4",
                        hint: "Three slices are eaten out of 4 total slices. Count them: 1, 2, 3!"
                    },
                    { 
                        fraction: "1", 
