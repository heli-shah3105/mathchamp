                    }
                ]
            },
            2: {
                name: "Thirds & Sixths",
                totalQuestions: 6,
                questions: [
                    { 
                        fraction: "1/3", 
                        options: ["1/3", "2/3", "1/6", "5/6"], 
                        correct: "1/3",
                        hint: "One piece is eaten out of 3 total pieces. That's 1/3!"
                    },
                    { 
                        fraction: "2/3", 
                        options: ["1/3", "2/3", "1/6", "5/6"], 
                        correct: "2/3",
                        hint: "Two pieces are eaten out of 3 total pieces. Count them: 1, 2!"
                    },
                    { 
                        fraction: "1/6", 
