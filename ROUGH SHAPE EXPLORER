<!-- Audio Elements (using data URIs for simplicity) -->
<audio id="bgMusic" loop></audio>
<audio id="clickSound"></audio>
<audio id="successSound"></audio>

<script>
document.addEventListener('DOMContentLoaded', () => {
    // --- DOM Elements ---
    const gameContainer = document.getElementById('game-container');
    const navButtons = document.querySelectorAll('.nav-button');
    const gameScreens = document.querySelectorAll('.game-screen');
    const scoreDisplay = document.getElementById('score');
    const gameArea = document.getElementById('game-area');

    // --- Game State ---
    let score = 0;
    let currentScreen = 'home-screen';
    let catcherInterval;
    let currentTargetShape = 'circle';

    // --- Audio Setup (Simple Beeps) ---
    // In a real game, you'd use proper audio files.
    const AudioContext = window.AudioContext || window.webkitAudioContext;
    const audioCtx = new AudioContext();

    function playSound(frequency, duration) {
        const oscillator = audioCtx.createOscillator();
        const gainNode = audioCtx.createGain();
        oscillator.connect(gainNode);
        gainNode.connect(audioCtx.destination);
        oscillator.frequency.value = frequency;
        oscillator.type = 'sine';
        gainNode.gain.setValueAtTime(0.3, audioCtx.currentTime);
        gainNode.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + duration);
        oscillator.start(audioCtx.currentTime);
        oscillator.stop(audioCtx.currentTime + duration);
    }
    const sounds = {
        click: () => playSound(600, 0.1),
        success: () => { playSound(523, 0.1); setTimeout(() => playSound(659, 0.1), 100); },
        wrong: () => playSound(200, 0.2)
    };

    // --- Core Functions ---
    function updateScore(points) {
        score += points;
        scoreDisplay.textContent = score;
        showFeedback(points > 0 ? '‚ú®' : 'üòÖ');
        if (points > 0) {
            sounds.success();
            createConfetti();
        } else {
            sounds.wrong();
        }
    }

    function showFeedback(emoji) {
        const feedbackEl = document.createElement('div');
        feedbackEl.className = 'feedback';
        feedbackEl.textContent = emoji;
        gameContainer.appendChild(feedbackEl);
        setTimeout(() => feedbackEl.remove(), 1000);
    }

    function createConfetti() {
        for(let i = 0; i < 20; i++) {
            setTimeout(() => {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 50%)`;
                confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
                gameContainer.appendChild(confetti);
                setTimeout(() => confetti.remove(), 3000);
            }, i * 50);
        }
    }

    function switchScreen(screenId) {
        gameScreens.forEach(screen => screen.classList.remove('active'));
        navButtons.forEach(btn => btn.classList.remove('active'));
        
        document.getElementById(screenId).classList.add('active');
        document.querySelector(`[data-screen="${screenId}"]`).classList.add('active');
        
        currentScreen = screenId;
        sounds.click();
        stopAllGames(); // Stop any running game logic
        initGame(screenId); // Start the new game logic
    }

    function stopAllGames() {
        clearInterval(catcherInterval);
        // Clear dynamic content
        document.querySelectorAll('.falling-shape, .drop-zone, .draggable-shape, .hidden-shape').forEach(el => el.remove());
    }

    // --- Navigation ---
    navButtons.forEach(button => {
        button.addEventListener('click', () => {
            const screenId = button.dataset.screen;
            switchScreen(screenId);
        });
    });

    // --- Game Initialization Logic ---
    function initGame(screenId) {
        switch(screenId) {
            case 'catcher-screen':
                initCatcherGame();
                break;
            case 'builder-screen':
                initBuilderGame();
                break;
            case 'safari-screen':
                initSafariGame();
                break;
        }
    }

    // --- MINI-GAME 1: Shape Catcher ---
    function initCatcherGame() {
        const shapes = ['circle', 'square', 'triangle', 'star'];
        const instructionEl = document.getElementById('catcher-instruction');
        currentTargetShape = shapes[Math.floor(Math.random() * shapes.length)];
        instructionEl.innerHTML = `Tap the <strong>${currentTargetShape}s</strong>!`;

        function spawnShape() {
            const shapeEl = document.createElement('div');
            const shapeType = shapes[Math.floor(Math.random() * shapes.length)];
            shapeEl.className = `shape shape-${shapeType} falling-shape`;
            shapeEl.dataset.shape = shapeType;
            shapeEl.style.left = Math.random() * (gameArea.offsetWidth - 80) + 'px';
            
            shapeEl.addEventListener('click', () => {
                if (shapeType === currentTargetShape) {
                    updateScore(10);
                } else {
                    updateScore(-5);
                }
                shapeEl.remove();
            });
            
            gameArea.appendChild(shapeEl);
            // Remove shape after animation finishes
            setTimeout(() => shapeEl.remove(), 5000);
        }

        // Spawn shapes periodically
        catcherInterval = setInterval(spawnShape, 1500);
        // Change target shape periodically
        setInterval(() => {
            currentTargetShape = shapes[Math.floor(Math.random() * shapes.length)];
            instructionEl.innerHTML = `Tap the <strong>${currentTargetShape}s</strong>!`;
        }, 10000);
    }

    // --- MINI-GAME 2: Shape Builder ---
    function initBuilderGame() {
        const builderArea = document.getElementById('builder-area');
        const palette = document.getElementById('builder-shapes-palette');
        const puzzle = [
            { type: 'square', top: '110px', left: '110px' }, // Body
            { type: 'triangle', top: '20px', left: '110px' }, // Roof
            { type: 'circle', top: '140px', left: '130px' }, // Door
        ];

        // Create drop zones
        puzzle.forEach(p => {
            const zone = document.createElement('div');
            zone.className = 'drop-zone';
            zone.dataset.shapeType = p.type;
            zone.style.top = p.top;
            zone.style.left = p.left;
            zone.style.width = p.type === 'triangle' ? '0' : '80px';
            zone.style.height = p.type === 'triangle' ? '0' : '80px';
            if (p.type === 'triangle') {
                zone.style.borderLeft = '40px solid transparent';
                zone.style.borderRight = '40px solid transparent';
                zone.style.borderBottom = '70px dashed #adb5bd';
            }
            builderArea.appendChild(zone);
        });

        // Create draggable shapes
        const shuffledPuzzle = [...puzzle].sort(() => Math.random() - 0.5);
        shuffledPuzzle.forEach(p => {
            const shape = document.createElement('div');
            shape.className = `shape shape-${p.type} draggable-shape`;
            shape.draggable = true;
            shape.dataset.shapeType = p.type;
            palette.appendChild(shape);

            // Drag and Drop Events
            shape.addEventListener('dragstart', (e) => {
                e.dataTransfer.setData('text/plain', p.type);
                e.dataTransfer.effectAllowed = 'move';
                sounds.click();
            });
        });

        // Drop Zone Events
        document.querySelectorAll('.drop-zone').forEach(zone => {
            zone.addEventListener('dragover', (e) => {
                e.preventDefault();
                e.dataTransfer.dropEffect = 'move';
            });
            zone.addEventListener('drop', (e) => {
                e.preventDefault();
                const droppedShapeType = e.dataTransfer.getData('text/plain');
                if (droppedShapeType === zone.dataset.shapeType) {
                    zone.classList.add('filled');
                    const shape = document.querySelector(`.draggable-shape[data-shape-type="${droppedShapeType}"]`);
                    if(shape) shape.remove();
                    updateScore(15);
                    // Check if puzzle is complete
                    if (document.querySelectorAll('.drop-zone:not(.filled)').length === 0) {
                        setTimeout(() => showFeedback('üéâ'), 300);
                        setTimeout(() => initBuilderGame(), 2000); // Restart puzzle
                    }
                } else {
                    updateScore(-5);
                }
            });
        });
    }

    // --- MINI-GAME 3: Shape Safari ---
    function initSafariGame() {
        const scene = document.getElementById('safari-scene');
        const instructionEl = document.getElementById('safari-instruction');
        const shapes = ['circle', 'square', 'triangle', 'star'];
        const itemsToFind = 3;
        let foundCount = 0;

        currentTargetShape = shapes[Math.floor(Math.random() * shapes.length)];
        instructionEl.innerHTML = `Find the <strong>${currentTargetShape}s</strong>!`;

        for (let i = 0; i < itemsToFind; i++) {
            const shapeEl = document.createElement('div');
            shapeEl.className = `shape shape-${currentTargetShape} hidden-shape`;
            shapeEl.dataset.shape = currentTargetShape;
            
            // Randomly position shapes
            shapeEl.style.top = Math.random() * (scene.offsetHeight - 100) + 'px';
            shapeEl.style.left = Math.random() * (scene.offsetWidth - 100) + 'px';
            
            // Add some decoy shapes
            const decoyType = shapes.filter(s => s !== currentTargetShape)[Math.floor(Math.random() * (shapes.length - 1))];
            const decoyEl = document.createElement('div');
            decoyEl.className = `shape shape-${decoyType} hidden-shape`;
            decoyEl.dataset.shape = decoyType;
            decoyEl.style.top = Math.random() * (scene.offsetHeight - 100) + 'px';
            decoyEl.style.left = Math.random() * (scene.offsetWidth - 100) + 'px';

            scene.appendChild(shapeEl);
            scene.appendChild(decoyEl);
        }
        
        scene.addEventListener('click', (e) => {
            if (e.target.classList.contains('hidden-shape')) {
                if (e.target.dataset.shape === currentTargetShape && !e.target.classList.contains('found')) {
                    e.target.classList.add('found');
                    updateScore(20);
                    foundCount++;
                    if (foundCount === itemsToFind) {
                        setTimeout(() => {
                            showFeedback('üèÜ');
                            initSafariGame(); // Start a new round
                        }, 500);
                    }
                } else if (!e.target.classList.contains('found')) {
                    updateScore(-5);
                }
            }
        });
    }
});
</script>

</body>
</html>
