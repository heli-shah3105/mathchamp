        <h1>üåà Shape Explorer Adventure! üéÆ</h1>
        <div id="score-display">Score: <span id="score">0</span> ‚≠ê</div>
    </header>

    <nav>
        <button class="nav-button active" data-screen="home-screen">üè† Home</button>
        <button class="nav-button" data-screen="catcher-screen">üéØ Catcher</button>
        <button class="nav-button" data-screen="builder-screen">üß© Builder</button>
        <button class="nav-button" data-screen="safari-screen">üå≥ Safari</button>
    </nav>

    <main id="game-area">
        <!-- Home Screen -->
        <section id="home-screen" class="game-screen active">
            <div class="character">‚≠ê</div>
            <h2>Welcome, Explorer!</h2>
            <p>Choose a game to start your shape adventure!</p>
        </section>

        <!-- Shape Catcher Screen -->
        <section id="catcher-screen" class="game-screen">
            <div id="catcher-instruction">Tap the <strong>Circles</strong>!</div>
        </section>

        <!-- Shape Builder Screen -->
        <section id="builder-screen" class="game-screen">
            <div id="builder-area">
                <!-- Drop zones will be generated by JS -->
            </div>
            <div id="builder-shapes-palette">
                <!-- Draggable shapes will be generated by JS -->
            </div>
        </section>

        <!-- Shape Safari Screen -->
        <section id="safari-screen" class="game-screen">
