            eight: { name: 'Eight', icon: '8Ô∏è‚É£', value: 8 },
            nine: { name: 'Nine', icon: '9Ô∏è‚É£', value: 9 },
            ten: { name: 'Ten', icon: 'üîü', value: 10 }
        };

