            background: #FBBF24;
            animation: confetti-fall 3s linear forwards;
        }

        /* --- Victory Screen --- */
        #victory-screen {
            display: none; /* Hidden by default */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 200;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            text-align: center;
        }

        #victory-screen h2 {
            font-size: 3rem;
            color: #FBBF24;
