            --text-color: #1E293B;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Fredoka', sans-serif;
            background: linear-gradient(135deg, var(--bg-gradient-start), var(--bg-gradient-end));
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: var(--text-color);
            overflow: hidden;
            position: relative;
        }

        /* --- Header & Mascot --- */
        header {
            text-align: center;
            margin-bottom: 20px;
            z-index: 10;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #FBBF24;
            text-shadow: 3px 3px 0px #1E293B;
            animation: float 3s ease-in-out infinite;
        }

        .miko {
            font-size: 4rem;
            animation: swing 2s ease-in-out infinite;
            transform-origin: top center;
            display: inline-block;
        }

        /* --- Game Board --- */
        main {
            width: 90%;
            max-width: 600px;
            padding: 20px;
        }

        #game-board {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
            perspective: 1000px; /* For the 3D flip effect */
        }

        /* --- Card Styling --- */
        .card {
            aspect-ratio: 1 / 1;
            cursor: pointer;
            position: relative;
            transform-style: preserve-3d;
            transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .card.flipped {
            transform: rotateY(180deg);
        }

        .card.matched {
            animation: matchPulse 0.6s ease-out;
            pointer-events: none; /* Disable clicking on matched cards */
        }
        
        .card-face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 6px 0 var(--card-shadow), 0 8px 15px rgba(0,0,0,0.2);
            border: 3px solid #1E293B;
        }

        .card-front {
            background: var(--card-bg);
            font-size: 3rem;
        }

        .card-back {
            background: #86EFAC;
            transform: rotateY(180deg);
            font-size: 4rem;
        }

        /* --- Confetti Effect --- */
        .confetti-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
