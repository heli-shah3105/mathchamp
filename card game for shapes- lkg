<body>

    <header>
        <h1>Shape Safari!</h1>
        <div class="miko">üêµ</div>
    </header>

    <main>
        <section id="game-board"></section>
    </main>

    <div id="victory-screen">
        <h2>You're a Super Shape Finder!</h2>
        <div class="dancing-shapes">üéâüåüüéà</div>
        <button class="play-again-btn" onclick="initGame()">Play Again!</button>
    </div>

    <div class="confetti-container" id="confetti-container"></div>

    <script>
        // --- Game Configuration ---
        const shapes = {
            circle: { emoji: 'üü°', sound: 'boing' },
            square: { emoji: 'üü¶', sound: 'thump' },
            triangle: { emoji: 'üî∫', sound: 'zing' },
            star: { emoji: '‚≠ê', sound: 'shing' },
            heart: { emoji: '‚ù§Ô∏è', sound: 'beat' },
            diamond: { emoji: 'üíé', sound: 'sparkle' }
        };

        const gameConfig = {
            level: 1,
            pairs: 6 // Start with 6 pairs (12 cards)
        };

        // --- Game State ---
        let cards = [];
        let flippedCards = [];
        let matchedPairs = 0;
        let isProcessing = false;

        // --- DOM Elements ---
        const gameBoard = document.getElementById('game-board');
        const victoryScreen = document.getElementById('victory-screen');
        const confettiContainer = document.getElementById('confetti-container');

        // --- Audio Helper (using Web Audio API for simple beeps) ---
        const audioContext = new (window.AudioContext || window.webkitAudioContext)();

        function playSound(type) {
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);

            const currentTime = audioContext.currentTime;

            switch(type) {
                case 'boing':
                    oscillator.frequency.setValueAtTime(400, currentTime);
                    oscillator.frequency.exponentialRampToValueAtTime(600, currentTime + 0.1);
                    gainNode.gain.setValueAtTime(0.3, currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, currentTime + 0.2);
                    oscillator.start(currentTime);
                    oscillator.stop(currentTime + 0.2);
                    break;
                case 'thump':
                    oscillator.frequency.setValueAtTime(100, currentTime);
                    oscillator.type = 'sawtooth';
                    gainNode.gain.setValueAtTime(0.4, currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, currentTime + 0.1);
                    oscillator.start(currentTime);
                    oscillator.stop(currentTime + 0.1);
                    break;
                case 'zing':
                    oscillator.frequency.setValueAtTime(800, currentTime);
                    oscillator.type = 'square';
                    gainNode.gain.setValueAtTime(0.2, currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, currentTime + 0.15);
                    oscillator.start(currentTime);
                    oscillator.stop(currentTime + 0.15);
                    break;
                case 'shing':
                    oscillator.frequency.setValueAtTime(1200, currentTime);
                    oscillator.type = 'sine';
                    gainNode.gain.setValueAtTime(0.2, currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, currentTime + 0.3);
                    oscillator.start(currentTime);
                    oscillator.stop(currentTime + 0.3);
                    break;
                case 'beat':
                    oscillator.frequency.setValueAtTime(200, currentTime);
                    oscillator.frequency.exponentialRampToValueAtTime(250, currentTime + 0.1);
                    gainNode.gain.setValueAtTime(0.3, currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, currentTime + 0.2);
                    oscillator.start(currentTime);
                    oscillator.stop(currentTime + 0.2);
                    break;
                case 'sparkle':
                    oscillator.frequency.setValueAtTime(1500, currentTime);
                    oscillator.type = 'triangle';
                    gainNode.gain.setValueAtTime(0.1, currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, currentTime + 0.4);
                    oscillator.start(currentTime);
                    oscillator.stop(currentTime + 0.4);
                    break;
                case 'match':
                    // A quick ascending arpeggio for a match
                    for(let i = 0; i < 3; i++) {
                        const osc = audioContext.createOscillator();
                        const gain = audioContext.createGain();
                        osc.connect(gain);
                        gain.connect(audioContext.destination);
                        osc.frequency.setValueAtTime(400 + (i * 200), currentTime + (i * 0.1));
                        gain.gain.setValueAtTime(0.2, currentTime + (i * 0.1));
                        gain.gain.exponentialRampToValueAtTime(0.01, currentTime + (i * 0.1) + 0.2);
                        osc.start(currentTime + (i * 0.1));
                        osc.stop(currentTime + (i * 0.1) + 0.2);
                    }
                    break;
                case 'nomatch':
                    oscillator.frequency.setValueAtTime(300, currentTime);
                    oscillator.frequency.exponentialRampToValueAtTime(100, currentTime + 0.2);
                    gainNode.gain.setValueAtTime(0.2, currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, currentTime + 0.2);
                    oscillator.start(currentTime);
                    oscillator.stop(currentTime + 0.2);
                    break;
            }
        }


        // --- Game Logic ---
        function shuffle(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function createCard(shapeKey, id) {
            const card = document.createElement('div');
            card.classList.add('card');
            card.dataset.shapeKey = shapeKey;
            card.dataset.id = id;

            const cardFront = document.createElement('div');
            cardFront.classList.add('card-face', 'card-front');
            cardFront.textContent = 'üçÉ'; // Leaf emoji for the back

            const cardBack = document.createElement('div');
            cardBack.classList.add('card-face', 'card-back');
            cardBack.textContent = shapes[shapeKey].emoji;

            card.appendChild(cardFront);
            card.appendChild(cardBack);

            card.addEventListener('click', handleCardClick);
            return card;
        }

        function handleCardClick(event) {
            if (isProcessing) return;

            const clickedCard = event.currentTarget;
            if (clickedCard.classList.contains('flipped') || clickedCard.classList.contains('matched')) {
                return;
            }

            // Flip the card
            clickedCard.classList.add('flipped');
            const shapeKey = clickedCard.dataset.shapeKey;
            playSound(shapes[shapeKey].sound);

            flippedCards.push(clickedCard);

            if (flippedCards.length === 2) {
                isProcessing = true;
                checkForMatch();
            }
        }

        function checkForMatch() {
            const [card1, card2] = flippedCards;
            const shape1 = card1.dataset.shapeKey;
            const shape2 = card2.dataset.shapeKey;

            if (shape1 === shape2) {
                // It's a match!
                setTimeout(() => {
                    card1.classList.add('matched');
                    card2.classList.add('matched');
                    playSound('match');
                    createConfetti();
                    matchedPairs++;
                    flippedCards = [];
                    isProcessing = false;

                    if (matchedPairs === gameConfig.pairs) {
                        setTimeout(showVictoryScreen, 500);
                    }
                }, 600);
            } else {
                // Not a match
                setTimeout(() => {
                    card1.classList.remove('flipped');
                    card2.classList.remove('flipped');
                    playSound('nomatch');
                    flippedCards = [];
                    isProcessing = false;
                }, 1200);
            }
        }

        function createConfetti() {
            confettiContainer.innerHTML = ''; // Clear previous confetti
            const colors = ['#FBBF24', '#F87171', '#A78BFA', '#60A5FA', '#34D399', '#FDE047'];
            for (let i = 0; i < 50; i++) {
                const confettiPiece = document.createElement('div');
                confettiPiece.classList.add('confetti');
                confettiPiece.style.left = Math.random() * 100 + '%';
                confettiPiece.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confettiPiece.style.animationDelay = Math.random() * 0.5 + 's';
                confettiPiece.style.animationDuration = (Math.random() * 1 + 2) + 's';
                confettiContainer.appendChild(confettiPiece);
            }
            // Clean up confetti after animation
            setTimeout(() => { confettiContainer.innerHTML = ''; }, 3000);
        }

        function showVictoryScreen() {
            victoryScreen.style.display = 'flex';
        }

        function initGame() {
            // Reset state
            gameBoard.innerHTML = '';
            victoryScreen.style.display = 'none';
            cards = [];
            flippedCards = [];
            matchedPairs = 0;
            isProcessing = false;

            // Create pairs of shapes
            const shapeKeys = Object.keys(shapes);
            const selectedShapes = shapeKeys.slice(0, gameConfig.pairs);
            const cardPairs = [...selectedShapes, ...selectedShapes];
            shuffle(cardPairs);

            // Create and append cards to the board
            cardPairs.forEach((shapeKey, index) => {
                const card = createCard(shapeKey, index);
                cards.push(card);
                gameBoard.appendChild(card);
            });
        }

        // --- Start the Game ---
        initGame();

    </script>
</body>
</html>
